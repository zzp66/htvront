
<div class="fn-sale-banner">
    {% if section.settings.image_sale != blank %}
        {% assign image = section.settings.image_sale | img_url: '1920x' %}
        <img class="fn-sale-bannerimg" src="{{ image }}" alt="">
    {% endif %}
        {% if section.settings.image_bannermobie != blank %}
        {% assign image = section.settings.image_bannermobie | img_url: '750x' %}
        <img class="fn-sale-bannermobie" src="{{ image }}" alt="">
    {% endif %}
</div>
<div class="fn-video-mask">
  <div class="fn-mask">
    <div>
    <div class="mask-close">
      {% render 'press-close' %}
    </div>
    <video id="pressVideo" width="100%" height="100%" style="border-radius: 15px;" controls muted >
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/mp4">
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/ogg">
    </video>
  </div>
  </div>

</div>
{% schema %}
  {
	"name": "Press Pre-sale",
	"settings": [
