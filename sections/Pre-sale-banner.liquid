			"type": "image_picker",
			"id": "image_sale",
			"label": {
				"en": "Image",
				"zh-CN": "图片"
			}
		},
        {
			"type": "image_picker",
			"id": "image_bannermobie",
			"label": {
				"en": "Image",
				"zh-CN": "图片"
			}
		}
	],
    "blocks": [{
		"type": "bannerlist",
		"name": {
			"en": "banner text",
			"zh-CN": "海报文本"
		},
		"settings": [
          {
				"type": "text",
				"id": "banner_text",
				"label": {
					"en": "banner text ",
