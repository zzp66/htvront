<style>
  .cup-live{
    background: #FFF6EB;
    padding-bottom:60px;
    letter-spacing: 0;
  }
  .cup-live-content{
    width:1600px;
    margin:0 auto;
    background:#D9A47C;
    display:flex
  }
  .cup-live-header{
    flex:1;
    padding:46px 51px;
    position: relative;
  }
  .cup-live-desc{
    background: #FFECDE;
    border-radius: 28px;
    font-size: 24px;
    color: #AF6B3A;
    line-height: 55px;
    margin-bottom:18px;
    height:55px;
    width:387px;
    text-align:center
  }
  .cup-live-title{
    font-size: 42px;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 55px;
    margin-bottom:9px
  }
  .cup-live-date{
    font-size: 24px;
    color: #FFFFFF;
    line-height: 55px;
  }
  .cup-live-link{
    font-size: 24px;
    color: #FFFFFF !important;
    position: absolute;
    bottom: 56px;
  }
  .cup-live-link>img{
    width:31px;
    display:inline-block;
    vertical-align: text-bottom;
  }
   @media screen and (max-width: 1720px){
    .cup-live-content{
      width:83.33%
    }
  }
  @media screen and (max-width: 1440px){
    .cup-live-header{
      padding:30px
    }
    .cup-live-desc{
       height:40px;
       width:300px;
       line-height: 40px;
       font-size: 20px;
    }
    .cup-live-title{
      font-size: 28px;
      line-height: 46px;
    }
    .cup-live-date{
      font-size: 20px;
      line-height: 36px;
    }
    .cup-live-link{
      font-size:22px
    }
  }
  @media screen and (max-width: 1280px){
    .cup-live-link{
      font-size:20px;
      bottom:20px
    }
  }
   @media screen and (max-width: 1180px){
    .cup-live-desc{
       height:32px;
       width:260px;
       line-height: 32px;
       font-size: 18px;
    }
    .cup-live-title{
      font-size: 24px;
      line-height: 36px;
    }
    .cup-live-date{
      font-size: 18px;
      line-height: 26px;
    }
   }
  @media screen and (max-width: 1024px){
     .cup-live-link>img{
       width: 20px;
     }
    .cup-live-link{
      font-size: 18px;
      bottom: 10px;
    }
    .cup-live-date{
      font-size: 16px;
      line-height: 23px;
    }
    .cup-live-title{
      font-size: 22px;
      line-height: 30px;
    }
  }
  @media screen and (max-width: 750px){
    .cup-live{
      padding:12px 0 20px 0 
    }
     .cup-live-content{
      width:93.6%
    }
    .cup-live-content{
      display:block
    }
    .cup-live-header{
      padding:25px 20px 80px 20px
    }
    .cup-live-desc{
       height:30px;
       width:192px;
       line-height: 30px;
       font-size: 12px;
      margin-bottom:10px
    }
    .cup-live-title{
      font-size: 20px;
      line-height: 28px;
      margin-bottom:4px
    }
    .cup-live-date{
      font-size: 12px;
      line-height: 23px;
    }
     .cup-live-link{
      font-size:12px;
    }
    .cup-live-link>img{
      width:13px;
    }
   }
  }
</style>
<div class="cup-live">
  <div class="cup-live-content">
    <div class="cup-live-header">
      <div class="cup-live-desc">
        {{ section.settings.desc }}
      </div>
      <div class="cup-live-title">
        {{ section.settings.title }}
      </div>
      <div class="cup-live-date">
        {{ section.settings.date }}
      </div>
      {% if section.settings.link != blank %}
        <a class="cup-live-link" href="{{ section.settings.link }}">
          >>Watch Live
          <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/15_2x_305a7789-40c4-41a3-a3a7-a1f2a2dec2c9.png?v=1688976825">
        </a>
      {% endif %}
    </div>
    <div class="cup-live-img">
      <picture>
        <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'702x' }}">
        <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'924x' }}">
        <img src="{{ section.settings.image | img_url:'924x' }}">
      </picture>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Cup-live",
  "settings": [
    {
        "type":"text",
        "id":"desc",
        "label":"desc"
    },
    {
        "type":"text",
        "id":"title",
        "label":"title"
    },
    {
        "type":"text",
        "id":"date",
        "label":"date"
    },{
        "type":"url",
        "id":"link",
        "label":"link"
    },
    {
      "type":"image_picker",
      "id":"image",
      "label":"image"
  },{
      "type":"image_picker",
      "id":"image_mobile",
      "label":"image mobile"
  }
  ],
  "presets":[{
    "name":"Cup-live"
  }]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

