</style>

{% if section.settings.title != blank %}
<div class="zone-machine" id="{{ section.settings.id }}">
  <p class="title_style">{{ section.settings.title }}</p>
  <p class="title_style">{{ section.settings.second_title }}</p>
  <div class="machine-main">
    <div class="machine-left">
      <div class="product-item">
        <img class="zone-bg-image" src="{{ section.settings.bg_image | img_url: '412x' }}">
        {%- if section.settings.product.featured_media -%}
          <a href="{{ section.settings.product.url }}" class="product-image">
            <img
              class="img-first"
              src="{{ section.settings.product.featured_media | img_url: '478x' }}"
              alt="{{ section.settings.product.featured_media.alt | escape }}"
              {% unless lazy_load == false %}
                loading="lazy"
              {% endunless %}
            >
          </a>
        {%- endif -%}
        <div class="product-layout">
          <div class="product-sale-title t">
            <a href="{{ section.settings.product.url }}" class="t">{{ section.settings.product.title | escape }}</a>
          </div>
          <div class="product-rules">
            {{ section.settings.product_rules }}
          </div>
          <div class="fn-color-attr">
            {%- for option in section.settings.product.options_with_values -%}
              {%- if option.name == 'Colors' or option.name == 'Color' -%}
                <ul>
                  {%- if option.name == 'Colors' -%}
                    {% assign colorList = section.settings.product.options_by_name.Colors.values | slice: 0, 5 %}
                  {%- else -%}
                    {% assign colorList = section.settings.product.options_by_name.Color.values | slice: 0, 5 %}
                  {%- endif -%}
                  {%- for value in colorList -%}
                    <li>
                      <a href="{{ section.settings.product.url }}?variant={{ section.settings.product.variants[forloop.index0].id }}">
                        {%- if section.settings.product.variants[forloop.index0].featured_image != blank -%}
                          <img
                            src="{{ section.settings.product.variants[forloop.index0].featured_image | img_url: '50x50' }}"
                            alt="{{ value }}"
                          >
                        {%- endif -%}
                      </a>
                    </li>
                  {% endfor %}
                  {%- if option.name == 'Colors' -%}
                    {% assign size = section.settings.product.options_by_name.Colors.values | size | minus: 5 %}
                  {%- else -%}
                    {% assign size = section.settings.product.options_by_name.Color.values | size | minus: 5 %}
                  {%- endif -%}
                  {%- if size > 0 -%}
                    <li class="color-quantity">
                      <a href="{{ section.settings.product.url }}">+{{ size }}</a>
                    </li>
                  {%- endif -%}
                </ul>
              {%- endif -%}
            {% endfor %}
          </div>
          <div class="coupon-price">
            {% if section.settings.coupon_price != blank %}
              <span>Coupon Price:</span>
              <span>{{ section.settings.coupon_price }}</span>
            {% endif %}
          </div>
          <div class="price-code">
            {% if section.settings.code != blank %}
              <div class="code">
                <span>Coupon Code:</span>
                <span>{{ section.settings.code }}</span>
                <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/8_23556d6b-f24f-4b67-8f64-73196bf27b0a.png?v=1691375251" onclick="copyticket('{{ section.settings.code }}')" >
              </div>
            {% endif %}
          </div>
          <div class="block--price">
            <span>Regular Price:</span>
            {% render 'sffers-price', product: section.settings.product, price_class: '' %}
          </div>
           <div class="heatPress-addcart-sale">
            {% render 'easter-addCart', product: section.settings.product %}
          </div>
        </div>
      </div>
    </div>
    <div class="machine-right">
      {% for block in section.blocks %}
        <div class="block-product-item">
        {%- if block.settings.product.featured_media -%}
          <a href="{{ block.settings.product.url }}" class="product-image">
            <img
              class="img-first"
              src="{{ block.settings.product.featured_media | img_url: '285x' }}"
              alt="{{ block.settings.product.featured_media.alt | escape }}"
              {% unless lazy_load == false %}
                loading="lazy"
              {% endunless %}
            >
          </a>
        {%- endif -%}
        <div class="block-layout">
          <div class="block-sale-title t">
            <a href="{{ block.settings.product.url }}" class="t">{{ block.settings.product.title | escape }}</a>
          </div>
          <div class="fn-color-attr">
            {%- for option in block.settings.product.options_with_values -%}
              {%- if option.name == 'Colors' or option.name == 'Color' -%}
                <ul>
                  {%- if option.name == 'Colors' -%}
                    {% assign colorList = block.settings.product.options_by_name.Colors.values | slice: 0, 5 %}
                  {%- else -%}
                    {% assign colorList = block.settings.product.options_by_name.Color.values | slice: 0, 5 %}
                  {%- endif -%}
                  {%- for value in colorList -%}
                    <li>
                      <a href="{{ block.settings.product.url }}?variant={{ block.settings.product.variants[forloop.index0].id }}">
                        {%- if block.settings.product.variants[forloop.index0].featured_image != blank -%}
                          <img
                            src="{{ block.settings.product.variants[forloop.index0].featured_image | img_url: '50x50' }}"
                            alt="{{ value }}"
                          >
                        {%- endif -%}
                      </a>
                    </li>
                  {% endfor %}
                  {%- if option.name == 'Colors' -%}
                    {% assign size = block.settings.product.options_by_name.Colors.values | size | minus: 5 %}
                  {%- else -%}
                    {% assign size = block.settings.product.options_by_name.Color.values | size | minus: 5 %}
                  {%- endif -%}
                  {%- if size > 0 -%}
                    <li class="color-quantity">
                      <a href="{{ block.settings.product.url }}">+{{ size }}</a>
                    </li>
                  {%- endif -%}
                </ul>
              {%- endif -%}
            {% endfor %}
          </div>
          <div class="coupon-price">
            {% if block.settings.coupon_price != blank %}
              <span>Coupon Price:</span>
              <span>{{ block.settings.coupon_price }}</span>
            {% endif %}
          </div>
          <div class="price-code">
            {% if block.settings.code != blank %}
              <div class="code">
                <span>Coupon Code:</span>
                <span>{{ block.settings.code }}</span>
                <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/8_23556d6b-f24f-4b67-8f64-73196bf27b0a.png?v=1691375251" onclick="copyticket('{{ block.settings.code }}')" >
              </div>
            {% endif %}
          </div>
          <div class="block--price">
            <span>Regular Price:</span>
            {% render 'sffers-price', product: block.settings.product, price_class: '' %}
          </div>
           <div class="heatPress-addcart-sale">
            {% render 'easter-addCart', product: block.settings.product %}
          </div>
        </div>
      </div>  
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
<script>
  function copyticket(code){
    let url = code;
    let copyInput = document.createElement('input');
    	document.body.appendChild(copyInput);
    	copyInput.setAttribute('value', url);
    	copyInput.select();
    	document.execCommand("Copy");
    	copyInput.remove();
        alertMsg()
  }
   function alertMsg(){
      var alertFram = document.createElement("DIV");
      alertFram.id = "alertFram";
      alertFram.style.position = "fixed";
      alertFram.style.width = "100%";
      alertFram.style.textAlign = "center";
      alertFram.style.bottom = "40px";
      alertFram.style.zIndex = "10001";
      strHtml = " <span style=\"font-family: 微软雅黑;display:inline-block;background:#333;color:#fff;padding:0 20px;line-height:36px;border-radius:6px; \">Copied successfully</span>";
      alertFram.innerHTML = strHtml;
      document.body.appendChild(alertFram);
      setTimeout((function(){
        alertFram.style.display="none";
      }),2000);
    }
</script>
