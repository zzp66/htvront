    }
    .coupon-price>span:nth-child(2){
      line-height:28px;
    }
    .zone-bg-image{
      display:none;
    }
    .machine-left .button--full-width{
      width: 100%;
      height: 42px;
      font-size: 14px;
    }
    .block-product-item{
      margin-left:8px;
    }
    .machine-right{
      justify-content: center;
    }
    .block-product-item{
