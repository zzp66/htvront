<style>
  .zone-machine{
    width: 100%;
    background: #FFF6D6;
    box-shadow: 0px 6px 14px 0px rgba(95,4,4,0.25);
    border-radius: 20px;
    padding:23px 23px 20px;
    margin-top:65px;
  }
  .machine-main{
    display:flex;
  }
  .machine-left{
    padding:13px;
    background-color:#fff;
    border-radius:8px;
    min-width: 902px;
  }
  .machine-left .product-item{
    background: linear-gradient(180deg, #FFF2C3 0%, rgba(255,242,195,0) 100%);
    border-radius: 8px 8px 8px 8px;
    position:relative; 
    display: flex;
    padding: 36px 18px 40px 10px;
  }
  .machine-left .product-image{
    min-width:478px;
  }
  .zone-bg-image{
    position: absolute;
    right: -50px;
    top: 34%;
  }
  .machine-left .product-layout{
    margin-left:12px;
    position:relative; 
  }
  .product-sale-title{
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    line-height: 23px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    letter-spacing: 0;
  }
  .product-rules li{
    font-size: 16px;
    font-weight: 400;
    color: #333333;
    line-height: 19px;
    position: relative;
    padding-left: 20px;
    margin-bottom: 8px;
  }
  .product-rules li:before{
    content: '';
    width: 8px;
    height: 8px;
    background: #333333;
    border-radius: 50%;
    position: absolute;
    left: 0;
    top: 5px;
  }
  .product-rules{
    margin-top: 15px;
    min-height: 191px;
  }
  .machine-left .fn-color-attr ul li,
  .machine-right .fn-color-attr ul li{
    width: 40px;
    height: 40px;
  }
  .machine-left .fn-color-attr ul li+li,
  .machine-right .fn-color-attr ul li+li{
    margin-left: 10px;
  }
  .machine-left .fn-color-attr ul li img,
  .machine-right .fn-color-attr ul li img{
    width: 40px;
    height: 40px;
  }
  .coupon-price>span:nth-child(1){
    font-size: 16px;
    color: #333;
    font-weight: bold;
    padding-right:5px;
  }
  .coupon-price>span:nth-child(2){
    color: #FF6301;
    font-size: 24px;
    font-weight: bold;
  }
  .machine-right .coupon-price>span:nth-child(1){
    font-size: 14px;
    color: #333;
    font-weight: bold;
    padding-right:5px;
  }
  .machine-left .code,.machine-right .code{
    display: flex;
    color: #333;
    font-weight: bold;
    align-items: baseline;
  }
  .machine-left .code>span:nth-child(1){
    font-size:16px;
  }
  .machine-left .code>span:nth-child(2){
    font-size:18px;
    padding:0 3px 0 5px;
  }
  .machine-right .code>span:nth-child(1){
    font-size:14px;
  }
  .machine-right .code>span:nth-child(2){
    font-size:16px;
    padding:0 3px 0 5px;
  }
  .machine-left .code>img,.machine-right .code>img{
    height: 14px;
    cursor: pointer;
  }
  .machine-left .block--price{
    display:flex;
    font-size: 16px;
    align-items: baseline;
    color:#333;
    margin-bottom:10px
  }
  .machine-left .block--price>span:nth-child(1),.machine-right .block--price>span:nth-child(1){
    padding-right:5px;
  }
  .machine-right .block--price{
    display:flex;
    font-size: 14px;
    align-items: baseline;
    color:#333;
    margin-bottom:10px
  }
  .machine-left .price-item--sale.price-item--last,.machine-right .price-item--sale.price-item--last{
    display:none;
  }
  .machine-left .fn-compareat_price .fn-compare-at_price{
    text-decoration: auto;
    font-size:16px;
    color:#333;
  }
  .machine-left .price__regular .price-item--regular{
    font-size:16px;
  }
  .machine-right .price__regular .price-item--regular{
    font-size:14px;
  }
  .machine-right .fn-compareat_price .fn-compare-at_price{
    font-size:14px;
    text-decoration: auto;
    color:#333;
    padding-top: 2px;
  }
  .machine-left .button--full-width{
    width: 347px;
    height: 46px;
    background: linear-gradient(91deg, #FE4E43 0%, #FF7B36 100%);
    border-radius: 4px 4px 4px 4px;
    padding: 0;
    margin: 0;
    min-width: auto;
    --border-offset: none;
    min-height: auto;
    --border-opacity: none;
  }
  .machine-right .button--full-width{
    height: 46px;
    background: linear-gradient(91deg, #FE4E43 0%, #FF7B36 100%);
    border-radius: 8px;
    opacity: 1;
    --border-offset: none;
    padding: 0;
    --border-opacity: none;
  }
  .machine-left .fn-color-attr{
    margin-bottom:10px;
    height:40px;
  }
  .machine-right .fn-color-attr{
    margin-bottom:5px;
    height:40px;
  }
  .title_style{
    text-align:center;
    color: #C63D39;
  }
  .zone-machine>p:nth-child(1){
    font-size: 32px;
    font-weight: bold;
    line-height: 38px;
    margin-bottom: 10px;
  }
  .zone-machine>p:nth-child(2){
    font-size: 16px;
    margin-bottom: 20px;
    line-height: 19px;
  }
  .machine-right {
    display:flex;
  }
  .block-product-item{
    margin-left:15px;
    background-color:#fff;
    border-radius: 8px;
    padding:13px;
    width: 47%;
  }
  .product-item .img-first,.block-product-item .img-first{
