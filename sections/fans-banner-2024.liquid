<style>
   .fn-marketing-banner .show-in-mobile{
     display: none;
   }
  @media screen and (max-width: 750px){
    .fn-marketing-banner .show-in-mobile{
       display:block;
        width:100%;
     }
     .fn-marketing-banner .show-in-pc{
          display: none;
      }
  }
</style>
<div class="fn-marketing-banner" id="{{ section.settings.card_id }}">
  {%- if section.settings.link != blank -%}
    <a href="{{ section.settings.link }}">
  {%- endif -%}
  <picture>
    <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'750x' }}">
    <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1920x' }}">
    <img src="{{ section.settings.image | img_url:'1920x' }}">
  </picture>
  {%- if section.settings.link != blank -%}
    </a>
  {%- endif -%}
</div>

{% schema %}
{
    "name":"Fans Banner",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":{
                "en":"Image",
                "zh-CN":"图片"
            }
        },
      {
            "type":"image_picker",
            "id":"image_mobile",
            "label":{
                "en":"Image mobile",
                "zh-CN":"手机端图片"
            }
        },
        {
            "type":"url",
            "id":"link",
            "label":{
                "en":"Links",
                "zh-CN":"链接"
            }
        },{
           "type":"text",
            "id":"card_id",
            "label":"id"
        }
    ],
    "presets":[
        {
            "name":"Fans Banner"
        }
    ]
}
{% endschema %}
