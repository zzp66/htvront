  {
    "name": "Section name",
    "settings": [
        {
			"type": "text",
			"id": "BlackFriday_title",
			"label": {
				"en": "title"
			}
		},
        {
			"type": "image_picker",
			"id": "Clarence_img",
			"label": {
				"en": "The left background"
			}
		},
        {
			"type": "image_picker",
			"id": "gift_img",
			"label": {
				"en": "left imges"
			}
		},
        {
			"type": "text",
			"id": "bodyright_title",
			"label": {
				"en": "gift title"
			}
		} 
    ]
  }
