    },
    {
      "type":"text",
      "id":"title",
      "label":"title"
    },{
      "type":"number",
      "id":"title_fontsize",
      "label":"title fontsize"
    },{
      "type":"color",
      "id":"title_color",
      "label":"title color"
    }
  ],
  "blocks":[
    {
      "type":"brand",
      "name":{
        "en":"image",
        "zh-CN":"image"
        },
      "settings":[
         {
          "type":"image_picker",
          "id":"image",
          "label":{
            "en":"Image",
            "zh-CN":"图片"
           }
         },
        {
          "type":"image_picker",
          "id":"image_mobile",
          "label":"image mobile"
        },
        {
          "type":"text",
          "id":"title",
          "label":"title"
        },
        {
          "type":"text",
          "id":"text",
          "label":"text"
        }
      ]
    }
  ],
  "presets":[{
    "name":"Group-Selling-Point",
    "blocks":[
        {
        "type":"brand"
        }
      ]
  }]
}
