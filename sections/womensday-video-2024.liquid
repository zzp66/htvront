<style>
   #shopify-section-{{ section.id }} .womensday-video{
    position:relative;
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    {% if section.settings.background_color != blank %}
        background:{{section.settings.background_color}};
    {% endif %}
    padding-bottom: 60px;
  }
  .video-big-box{
    background: #FFF5FE;
    border-radius: 10px 10px 10px 10px;
  }
   .fn-Creativity-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    left: 0;
    top: 0;
    z-index: 999;
    display: none;
  }
  .fn-Creativity-mask .fn-Storiesmask-main {
    cursor: pointer;
  }
  .fn-Stories-Video {
    width:100%;
    height:653px;
  }
  .fn-Stories-Video iframe{
    border-radius:10px
  }
  .fn-Creativity-mask>div{
    margin: 0 auto;
    transform: translate(-50%, -50%);
    top: 50%; 
    left: 50%;
    position: absolute;
    background-color: #fff;
    border-radius: 16px;
    padding: 3.9% 6.2%;
    width: 74.85%;
  }
  .fn-Creativity-mask .mask-close {
    position: absolute;
    top: 21px;
    right: 25px;
  }
  .video-box{
    display:flex;
    padding:0 20px 20px;
  }
  .video-item:nth-child(odd){
    margin-right:20px;
  }
  .video-image{
    position:relative;
  }
  .video-image>.video-btn{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 150px;
  }
  .video-text{
    width: 100%;
    min-height: 67px;
    background: #FEFEFE;
    border-radius: 0px 0px 6px 6px;
    font-size: 20px;
    text-align: center;
    color: #8D429C;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media screen and (max-width: 1440px){
     .video-text{
        font-size: 16px;
     }
    .video-image>.video-btn{
      width:100px;
    }
  }
  @media screen and (max-width: 1280px){
     .video-text{
        font-size: 14px;
     }
  }
  @media screen and (max-width: 1024px){
    .video-box{
      flex-direction: column;
    }
    .video-item:nth-child(odd) {
      margin-right: 0;
      margin-bottom: 12px;
    }
    .video-image>img{
      width:100%;
    }
    .video-text {
      font-size: 14px;
      min-height: 32px;
      padding: 0 5px;
    }
    .video-box{
      padding:0 6px 12px;
    }
  }
  @media screen and (max-width: 820px){
    .fn-Stories-Video {
      height:300px;
    }
    .fn-Creativity-mask .mask-close {
      top: 5px;
      right: 5px;
    }
  }
  @media screen and (max-width: 750px){
    .fn-Creativity-mask>div{
      width:100%;
      border-radius: 0;
      padding: 5.1% 6.9%;
    }
    .fn-Creativity-mask-mobile>div{
      width:93.6%;
    }
   .fn-Creativity-mask .mask-close {
      top: 3px;
      right: 4px;
    }
   .fn-Creativity-mask .mask-close img{
     width:19px;
     height:19px
   }
   .fn-Stories-Video {
      height:230px;
    }
   .fn-Stories-Video iframe{
     border-radius:0
   }
}
  @media screen and (max-width: 480px){
    #shopify-section-{{ section.id }} .womensday-video{
      padding-bottom: 30px;
      background: #FEE8F9;
    }
    .video-image>.video-btn{
      width:80px;
    }
  }
</style>
<div class="womensday-video" id="{{ section.settings.id }}">
   <div class="womensday-width">
    <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/6585217-02_3.png?v=1707018035" class="flower-image">
    <div class="video-big-box">
      <p class="title">{{ section.settings.title }}</p>
      <p class="desc">{{ section.settings.desc }}</p>
      <div class="video-box">
        {% for block in section.blocks %}
          <div class="video-item">
            <div class="video-image" onclick="creativityFunction('1','{{ block.settings.live_video }}')" >
               <img src="{{ block.settings.image | img_url:'750x' }}">
                {% if block.settings.image != blank %}
                  <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/8_2x_44e387d9-34c7-4062-a476-c92df26c10ce.png?v=1688953496" class="video-btn">
                {% endif %}
            </div>
            <div class="video-text">
              {{ block.settings.title }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
   </div>
</div>
<div class="fn-Creativity-mask">
  <div>
    <div class="fn-Storiesmask-main">
      <div class="mask-close" onclick="creativityFunction('2')">
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
      </div>
      <div class="fn-Stories-Video">
        <iframe
          id="stories-Video-Iframe-creativity"
          width="100%"
          height="100%"
          src=""
          title="YouTube video player"
          frameborder="no"
          border="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>
<script>
  function creativityFunction(e,link){
    if(e == 1 ) {
      $('#stories-Video-Iframe-creativity').eq(0).attr('src',link)
      $('.fn-Creativity-mask').show();
    }
    if(e == 2 ) {
      $('.fn-Creativity-mask').hide();
      $('#stories-Video-Iframe-creativity').eq(0).attr('src','')
    }
  }
</script>
