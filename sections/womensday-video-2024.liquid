  {
    "name": "Womens-Day-Video",
    "settings": [
      {
        "type": "text",
        "id": "id",
        "label": "id(页面唯一性，全英文)"
      },{
        "type":"image_picker",
        "id":"background_image",
        "label":"background image"
      },{
        "type":"color",
        "id":"background_color",
        "label":"background color"
      },{
         "type":"text",
         "id":"title",
         "label":"title"
      },{
         "type":"text",
         "id":"desc",
         "label":"desc"
      }
    ],
    "blocks":[{
      "type":"images",
      "name":"images",
      "settings":[
        {
          "type": "image_picker",
          "id":"image",
          "label":"image"
        },
        {
          "type": "text",
          "id":"title",
          "label":"title"
        },
        {
          "type": "url",
          "id":"live_video",
          "label": {
              "en": "video site",
              "zh-CN": "视频嵌入地址"
          }
        }
      ]
    }],
    "presets":[
        {
          "name":"Womens-Day-Video"
        }
    ]
  }
{% endschema %}