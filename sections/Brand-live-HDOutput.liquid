      <div class="fn-HDOutput-give">{{ section.settings.HDOutput_give }}</div>
    </div>
    <div class="fn-HDOutput-Comments">Comments: {{ section.settings.Comments_number }}</div>
    <div class="fn-HDOutput-plays">{{ section.settings.plays_number }} plays</div>
    <div class="fn-HDOutput-button">
        <a href="{{ section.settings.HDOutput_Link }}">
            {{ section.settings.HDOutput_button }}
        </a>
    </div>
  </div>
</div>
