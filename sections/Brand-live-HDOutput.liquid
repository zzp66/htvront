<div class="fn-live-HDOutput">
  <div class="fn-HDOutput-video">
<iframe src="https://www.facebook.com/plugins/video.php?height=520&width=790&href=https%3A%2F%2Fwww.facebook.com%2Fhtvront%2Fvideos%2F806238313715261%2F&show_text=false&width=790&t=0" width="100%" height="100%" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share" allowFullScreen="true"></iframe> </div>
  <div class="fn-HDOutput-summary">
    <div class="fn-HDOutput-title">{{ section.settings.HDOutput_title }}</div>
    <div class="fn-HDOutput-content1">{{ section.settings.HDOutput_text1 }}</div>
    <div class="fn-HDOutput-content2">{{ section.settings.HDOutput_text2 }}</div>
