<style>
    .hot-sale-left-phone {
        display: none;
        text-align: -webkit-center;
    }
    .menu {
        text-align: center;
        display: flex;
        width: 100%;
        justify-content: space-between;
    }
    .menu_div .pc {
        text-align: -webkit-center;
        height: 40px;
        margin-bottom: 23px;
    }
    .menu_div {
        cursor: pointer;
    }
    .menu_div .phone {
        font-size: 24px;
        color: #333;
        line-height: 1;
        margin-top: 30px;
        font-weight: inherit;
    }
    .menu_div img {
        display: inline-block;
    }
    .menu_hide{
        display: none;
    }
    .menu_hide:first-child{
        display: block;
    }
    .hot-sale {
        display: flex;
        justify-content: space-between;
        margin: 50px auto 40px auto;
    }
    .hot-sale .hot-sale-left {
        width: 24%;
        position: relative;
    }
    .hot-sale .hot-sale-right {
        width: 74.7%;
    }
    .hot-sale .hot-sale-right .sale__item {
        max-width: 32%;
        width:100%;
    }
    .hot-sale .hot-sale-right .sale__item:nth-child(1) {
        margin-bottom: 32px;
    }

    .hot-sale-product {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }
    .hot-sale-link {
        height: 50px;
        border: 2px solid #333333;
        border-radius: 10px;
        text-align: center;
        width: 30%;
        margin: 0 auto;
        font-size: 24px;
        font-weight: 400;
        color: #333333;
    }
    .sale-left-link {
        width: 100%;
        text-align: center;
        position: absolute;
        left: 0;
        bottom: 30px;
    }
    .sale-left-link a {
        max-width: 300px;
        background: #FF7606;
        border-radius: 12px;
        font-size: 24px;
        color: #FFFFFF;
        height: 63px;
        line-height: 63px;
        margin: 0 auto;
    }
    .hot-sale-product:after {
        width: 32%;
        content: '';
    }
    @media (max-width: 1440px) {
      .fn-size-attr li {
        margin-top: 0px;
      }
      .fn-color-attr {
        margin-top: 0px;
      }
      .fn-color-attr ul li img {
        width: 26px;
        height: 26px;
      }
      .fn-color-attr ul li {
        width: 32px;
        height: 32px;
      }
      .fn-color-attr ul .color-quantity {
        font-size: 14px;
      }
      .fn-color-attr ul {
        margin-top: 7px;
      }
      .fn-color-attr ul .color-quantity {
        margin-left: 0;
      }
        .sale-left-link {
            width: 80%;
            margin: 0 auto;
            right: 0;
        }
    }
    @media (max-width: 1200px) {
        .hot-sale .hot-sale-right {
            width: 100%;
        }
        .hot-sale .hot-sale-left {
            display: none;
        }
        .hot-sale-product {
            margin-left: 0;
        }
    }
    @media (max-width: 991px) {
        .menu {
            overflow-x: auto;
        }
        .menu_div .phone {
            font-size: 20px;
        }
        .hot-sale .hot-sale-right {
            width: 100%;
        }
        .hot-sale .hot-sale-right .sale__item {
            max-width: 48%;
        }
        .pc-show {
            display: none;
        }
    }
    @media (max-width: 749px) {
        .hot-sale .hot-sale-right .sale__item {
            max-width: 49%;
            margin-bottom: 20px;
        }
        .hot-sale .hot-sale-right .sale__item:nth-child(1) {
            margin-bottom: 0;
        }
        .fn-product-layout {
            flex-wrap: wrap;
        }
        .fn-product-title {
            width: 100%;
            line-height: 19px;
        }
        .fn-product-title a {
            width: 100%;
            font-size: 14px;
        }
        .fn-product-price {
            width: 100%;
            margin-top: 10px;
        }
        .fn-product-price span {
            float: left;
            font-size: 14px;
        }
        .fn-color-attr ul li img {
            width: 2rem;
            height: 2rem;
        }
        .fn-color-attr ul li {
            width: 2.2rem;
            height: 2.2rem;
        }
        .menu_div .phone {
            font-size: 1rem;
        }
        .fn-color-attr ul .color-quantity {
            line-height: 2.2rem;
            margin-left: 5px;
            font-size: 14px;
        }
        .menu_div img {
            max-width: 1.8rem;
        }
    }
    @media (max-width: 480px) {
        .menu_div .phone {
            font-size: 14px;
            margin-top: 10px;
        }
        .fn-color-attr ul li+li {
            margin-left: 2px;
        }
        .fn-color-attr ul .color-quantity span {
            display: none;
        }
        .hot-sale {
            margin: 30px auto 20px auto;
        }
    }
</style>
<div class="fn-hot">
    <div class="fn-page-width">
        {% if section.settings.main_title != blank %}
        <div class="hot-headline extra-t">{{ section.settings.main_title }}</div>
        {% endif %}
        <div class="menu barClick">
            {% for block in section.blocks %}
            <div class="menu_div">
                {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | img_url: '40x' }}">
                {% endif %}
                {% if block.settings.title != blank %}
                <h1 class="phone">{{ block.settings.title }}</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        <div id="menu-content">
            {% for block in section.blocks %}
            <div class="menu_hide">
                <div class="hot-sale">
                    <div class="hot-sale-left">
                        {% if section.settings.hot__leftImage != blank %}
                          <picture>
                            <source media="(max-width: 1200px)" srcset="{{ 'placeholder.jpg' | asset_url }}"/>
                            <img src="{{ section.settings.hot__leftImage | img_url: '385x'}}">
                          </picture>
                        {% endif %}
                        <div class= "sale-left-link t">
                            <a href="{{ section.settings.hot_leftLink }}">{{ section.settings.new_products }}</a>
                        </div>
                    </div>
                    <div class="hot-sale-right">
                        <ul class="hot-sale-product">
                            {%- for product in block.settings.collection.products limit: section.settings.products_to_show -%}
                            <li class="sale__item item sale__item--{{section.id}}">
                                {% render 'fn-card-product',
                                card_product: product,
                                show_secondary_image: section.settings.show_secondary_image
                                %}
                            </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                </div>
                <div class="more">
                    <a href="{{ block.settings.collection.url }}">MORE</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<script>
    $(function(){
        var menu_li=$(".barClick .menu_div")
        menu_li.click(function(){
            var index =  $(this).index();
            $("#menu-content > div").eq(index).show().siblings().hide();
        })
        $('.menu_div:first').addClass('t');
        $('.menu_div').click(function () {
            $(this).addClass('t');
            $(this).siblings('.menu_div').removeClass('t');
        });
    })
</script>
{% schema %}
{
    "name":"Index Hot Category",
    "class": "fn-index-section",
    "settings":[
        {
            "type":"text",
            "id":"main_title",
            "label":{
                "en":"Title",
                "zh-CN":"标题"
            }
        },
        {
            "type":"image_picker",
            "id":"hot__leftImage",
            "label":{
                "en":"Hot Image PC",
                "zh-CN":"左侧图片"
            }
        },
        {
            "type":"text",
            "id":"new_products",
            "label":{
                "en":"NEW PRODUCTS",
                "zh-CN":"新产品"
            }
        },
        {
            "type":"url",
            "id":"hot_leftLink",
            "label":{
                "en":"Image links",
                "zh-CN":"图片链接"
            }
        },
        {
            "type":"range",
            "id":"products_to_show",
            "min":3,
            "max":6,
            "step":1,
            "default":6,
            "label":"t:sections.featured-collection.settings.products_to_show.label"
        },
        {
            "type":"checkbox",
            "id":"show_secondary_image",
            "default":false,
            "label":"t:sections.featured-collection.settings.show_secondary_image.label"
        }
    ],
    "max_blocks": 4,
    "blocks":[
        {
            "type":"collection",
            "name":"Collection",
            "settings":[
                {
                    "type":"text",
                    "id":"title",
                    "label":"分类标题"
                },
                {
                    "type":"image_picker",
                    "id":"icon",
                    "label":"分类图标"
                },
                {
                    "type":"collection",
                    "id":"collection",
                    "label":"Collection"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Index Hot Category",
            "blocks":[
                {
                    "type":"collection"
                }
            ]
        }
    ]
}
{% endschema %}
