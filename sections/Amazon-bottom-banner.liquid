<style>
  .amazon-bottom-banner{
    background: #FFF4ED;
    padding:60px 0;
    letter-spacing: 0;
  }
  .bottom-banner-content{
    width:1600px;
    margin:0 auto;
    background:#D9A47C;
  }
  .bottom-banner-content img{
    margin:0 auto;
    cursor: pointer;
  }
  @media screen and (max-width: 1720px){
    .bottom-banner-content{
      width:83.33%
    }
  }
  @media screen and (max-width: 1180px){
    .bottom-banner-content{
      width:93.6%;
    }
    .amazon-bottom-banner{
      padding: 40px 0;
    }
  }
  @media screen and (max-width: 750px){
     .bottom-banner-content{
      width:93.6%
    }
    .bottom-banner-content{
      display:block
    }
  }
</style>
<div class="amazon-bottom-banner">
  <div class="bottom-banner-content">
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" target="_blank">
    {%- endif -%}
    <picture>
      <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'750x' }}">
      <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1600x' }}">
      <img src="{{ section.settings.image | img_url:'1600x' }}">
    </picture>
  </div>
</div>
{% schema %}
{
  "name": "Amazon Bottom Banner",
  "settings": [
    {
        "type":"url",
        "id":"link",
        "label":"link"
    },
    {
      "type":"image_picker",
      "id":"image",
      "label":"image"
  },{
      "type":"image_picker",
      "id":"image_mobile",
      "label":"image mobile"
  }
  ],
  "presets":[{
    "name":"Amazon Bottom Banner"
  }]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

