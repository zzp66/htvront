<style>
    .presell-product{
      letter-spacing: 0;
      margin-bottom:60px;
    }
    .presell-product-title{
      text-align:center;
      font-weight:bold;
      margin-bottom:24px;
      line-height:49px;
      font-size: 36px;
      color: #723600;
    }
    .presell-product-content{
      display: flex;
      justify-content: flex-start;
      flex-wrap: wrap;
      margin:0 auto;
      padding: 30px 17px 0;
    }
    .presell-product-items{
      width: 24%;
      background: #5E0101;
      border-radius: 8px;
      padding: 11px 12px 15px 13px;
      margin-bottom: 20px;
      margin-right: 1.3%;
    }
    .presell-product-items:nth-child(4n) {
      margin-right: 0;
    }
    .presell-product-items .fn-product-title .t {
      font-size: 16px;
      line-height: 22px;
      height: 42px;
      color: #fff;
    }
    .presell-product-items .fn-color-attr {
      height: 32px;
      margin-top: 15px;
    }
    .presell-product-items .fn-color-attr ul li {
      width: 30px;
      height: 30px;
      border: 0px;
    }
    .presell-product-items .fn-color-attr ul li + li {
      margin-left: 10px;
      color: #fff;
    }
    .presell-product-items .fn-color-attr ul li:hover {
      border: 1px solid #ff3737;
    }
    .presell-product-items .button--full-width {
      height: 46px;
      background: linear-gradient(91deg, #CD0101 0%, #8E0101 100%);
      border-radius: 4px;
      min-height: 46px;
      margin-top: 15px;
      --border-opacity: none;
      --border-offset: none;
      padding-left: 0;
      padding-right: 0;
    }
    .presell-product-items .fn-product-price {
      width: auto;
    }
    .presell-product-items .fn-product-price span {
      font-size: 24px;
      line-height: 24px;
      text-align: right;
      color: #FF4141;
    }
    .presell-product-items .fn-compareat_price .fn-compare-at_price {
      font-size: 16px;
      font-weight: 400;
      text-align: right;
      color: #fff;
    }
   .presell-product .title_desc{
     line-height: 33px;
     font-weight:400;
      padding-top: 12px;
      font-size: 24px;
   }
   .show-in-820{
     display:none;
   }
   .product-module-desc{
      font-size: 36px;
      font-weight: bold;
      line-height: 42px;
      text-align: center;
      padding-top: 30px;
    }
   @media screen and (max-width: 1720px){
    .product-rules{
      min-height: 160px;
    }
   }
   @media screen and (max-width: 1660px){
    .product-module-desc{
      font-size: 28px;
      line-height: 25px;
    }
   }
   @media screen and (max-width: 1520px){
    .product-rules{
      min-height: auto;
    }
   }
  
   @media screen and (max-width: 1280px){
    .product-module-desc{
      font-size: 24px;
      padding-top: 20px;
    }
   }
    @media screen and (max-width: 1024px){
      .coupons-rules>.rules-div>p{
        font-size: 12px;
        line-height: 14px;
      }
      .coupons-rules {
        width: calc(100% - 105px);
        padding: 0 10px 0 16px;
       font-size: 12px;
      }
      .coupons-money>span {
        font-size: 16px;
        line-height: 18px;
      }
      .coupons-money {
        width: 95px;
      } 
      .coupons-money>div>span:nth-child(1) {
        font-size: 14px;
      }
       .coupons-money>div>span:nth-child(2) {
        font-size: 28px;
      }
      .product-module-desc {
        font-size: 16px;
        padding-top: 10px;
        line-height: 18px;
      }
      .product-module-coupon {
        padding: 10px 15px 0;
      }
      .presell-product-items .fn-product-layout {
        display: block;
      }
      .presell-product-items .fn-product-title {
        width: 100%;
      }
      .presell-product-items .fn-compareat_price {
        flex-direction: initial;
        align-items: baseline;
      }
      .presell-product-items .fn-product-price {
        text-align: left;
      }
      .presell-product-items .fn-product-price span {
        float: initial;
      }
      .presell-product-items .fn-product-title .t,.presell-product-items .fn-product-price span{
        font-size:14px
      }
      .presell-product-items .fn-compareat_price .fn-compare-at_price{
        font-size:12px
      }
      .presell-product-items .fn-color-attr {
        height: 22px;
        margin-top:4px
      }
      .presell-product-items .fn-color-attr ul li {
        width: 20px;
        height: 20px;
      }
      .presell-product-items .fn-color-attr ul li img {
        width: 20px;
        height: 20px;
      }
      .presell-product-items .button--full-width{
        min-height: calc(3.0rem + var(--buttons-border-width) * 2);
        height: calc(3.0rem + var(--buttons-border-width) * 2);
        margin-top:6px
      }
      .presell-product-items .fn-color-attr ul .color-quantity{
        line-height:20px
      }
    }
    @media screen and (max-width: 820px){
     .presell-product{
       margin-bottom:30px;
     }
      .presell-product{
        padding:20px 7px 0;
      }
      .show-in-820{
        display:block;
      }
      .show-in-821{
        display:none;
      }
      .blackfriday-product-swiper .swiper-wrapper{
        flex-wrap: wrap;
      }
      .presell-product-items{
        padding:0;
      }
      .product-items-box{
          padding: 5px 5px 11px;
      }  
      .presell-product-items:nth-child(4n) {
        margin-right:6px !important;
      }
      .product-module-coupon{
        flex-wrap: wrap;
      }
      .product-module-coupon .coupons-item:nth-child(-n+2){
        width:191px;
        margin-bottom: 12px;
      }
      .product-module-coupon .coupons-item:nth-child(-n+2) .coupons-money,.product-module-coupon .coupons-item:nth-child(-n+2) .coupons-rules{
        width:100%;
      }
      .product-module-coupon .coupons-item:nth-child(3) .item-module{
        flex-direction: row;
      }
      .product-module-coupon .coupons-item:nth-child(3) .coupons-money {
        width: 105px;
      }
    }
    @media screen and (max-width: 768px){
      .presell-product-content{
        border-radius:2px;
        margin-top:0;
      }
      .presell-product-title{
        margin-bottom:10px;
        line-height:19px
      }
      .presell-product-items {
        margin-bottom:10px;
        margin-top:0 !important;
      }
      .presell-product-items .button--full-width{
        font-size:14px
      }
    }
    @media screen and (max-width: 540px){
      .product-module-coupon .coupons-item:nth-child(-n+2) {
        width: 163px;
        padding: 0;
      }
      .product-module-coupon .coupons-item:nth-child(1){
        margin-right:7px;
      }
      .product-module-coupon{
        padding: 0;
        margin-top: 6px;
      }
      .presell-product-content{
        padding:7px 5px;
      }
    }
   @media screen and (max-width: 450px){
     .presell-product{
       padding:0;
     }
     .product-module-coupon .coupons-item:nth-last-child(1){
       padding:0;
     }
   }
</style>
<div class="presell-product common-width"  id="{{ section.settings.id }}">
  <div class="black-module-title">
    <picture>
      <source media="(max-width: 710px)" srcset="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/materials-app.png?v=1699922904">
      <source media="(min-width: 711px)" srcset="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/Group_239.png?v=1699606695">
      <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/Group_239.png?v=1699606695">
    </picture>
    <div>{{ section.settings.title }}</div>
  </div>
  <div class="bg-out-box">
    <div class="bg-in-box">
      <div class="product-module-desc">
        {{ section.settings.desc }}
      </div>
      <div class="product-module-coupon">
        {% for block in section.blocks %}
          <div class="coupons-item">
             <picture>
              {% if forloop.index == 3 %}
                <source media="(max-width: 820px)" srcset="{{ block.settings.coupons_image_mobile | img_url:'331x' }}">
              {% else %}
                <source media="(max-width: 820px)" srcset="{{ block.settings.coupons_image_mobile | img_url:'191x' }}">
              {% endif %}
              <source media="(min-width: 821px)" srcset="{{ block.settings.coupon_image | img_url:'454x' }}">
              <img src="{{ block.settings.coupon_image | img_url:'454x' }}">
            </picture>
            <div class="item-module">
              <div class="coupons-money">
                <div>
                  <span>{{ block.settings.currency }}</span><span>{{ block.settings.money }}</span>
                </div>
                <span>{{ block.settings.coupon }}</span>
              </div>
              <div class="coupons-rules">
                {% if block.settings.coupon_code != blank %}
                  <div class="coupon-code">
                      Code: {{ block.settings.coupon_code }} 
                      <img src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/Group_18.png?v=1698810268" onclick="copyticket('{{ block.settings.coupon_code }}')">
                  </div>
                {% endif %}
                <div class="rules-div">
                  {{ block.settings.coupons_rules }}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="presell-product-content show-in-821">
        {% for item in section.settings.product_collection.products %}
            <div class="presell-product-items">
              {% render 'product-Model-custom',
                card_product: item,
                progress: false,
                show_secondary_image: section.settings.show_secondary_off,
                colorSize: true,
                buttonSeat: 'fileSteam',
                buttonText: 'ADD TO CART',
                title: 'flex',
                pirce: 'intitle'
              %}
            </div>
        {% endfor %}
      </div>
      <div class="presell-product-content show-in-820">
        <div class="swiper-container blackfriday-product-swiper">
          <div class="swiper-wrapper">
            {% for item in section.settings.product_collection.products %}
                <div class="presell-product-items swiper-slide">
                  <div class="product-items-box">
                      {% render 'product-Model-custom',
                        card_product: item,
                        progress: false,
                        show_secondary_image: section.settings.show_secondary_off,
                        colorSize: true,
                        buttonSeat: 'fileSteam',
                        buttonText: 'ADD TO CART',
                        title: 'flex',
                        pirce: 'intitle'
                      %}
                  </div>
                </div>
            {% endfor %}
          </div>
        </div>
        <div class="swiper-scrollbar" id="blackfriday-product-swiper-scrollbar"></div>
      </div>
    </div>
  </div>
</div>
<script>
   function copyticket(code){
    let url = code;
    let copyInput = document.createElement('input');
    	document.body.appendChild(copyInput);
    	copyInput.setAttribute('value', url);
    	copyInput.select();
    	document.execCommand("Copy");
    	copyInput.remove();
        alertMsg()
  }
   function alertMsg(){
      var alertFram = document.createElement("DIV");
      alertFram.id = "alertFram";
      alertFram.style.position = "fixed";
      alertFram.style.width = "100%";
      alertFram.style.textAlign = "center";
      alertFram.style.bottom = "40px";
      alertFram.style.zIndex = "10001";
      strHtml = " <span style=\"font-family: 微软雅黑;display:inline-block;background:#333;color:#fff;padding:0 20px;line-height:36px;border-radius:6px; \">Copied successfully</span>";
      alertFram.innerHTML = strHtml;
      document.body.appendChild(alertFram);
      setTimeout((function(){
        alertFram.style.display="none";
      }),2000);
    }
    var mySwiper_e = new Swiper('.blackfriday-product-swiper',{
      slidesPerView: 4, 
      spaceBetween:10,
      slidesPerColumn: 3,
      slidesPerColumnFill : 'row',
      scrollbar: {
        el: '#blackfriday-product-swiper-scrollbar',
      },
     breakpoints:{
        768:{
           slidesPerView:3.2,
           spaceBetween:6,
        },
        450:{
           slidesPerView:2.2,
           spaceBetween:6,
        }
      }
    });
</script>
