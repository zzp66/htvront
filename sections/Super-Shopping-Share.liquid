<style>
  .super-shopping-share{
     padding-top:35px
  }
  .share-width{
    width:1600px;
    margin:0 auto;
    position: relative;
  }
  .share-bg{
    background: linear-gradient(180deg, #FFE6B5 0%, #FFC97E 100%);
    border-radius: 50px;
    border: 2px solid #FFF8E6;
    /* border-image: linear-gradient(180deg, rgba(255, 248, 230, 1), rgba(255, 238, 200, 1)) 2 2; */
    padding:24px 0 24px 20px;
    clip-path: inset(0 round 50px);
    margin-top: 42px;
  }
  .share-title>picture>img{
    margin:0 auto;
  }
  .share-title{
    position:relative;
    padding-bottom: 16px;
  }
  .share-title-text{
    text-align:center;
    position:absolute;
    top: 3%;
    left: 50%;
    transform: translateX(-58%);
  }
  .share-title-text>p:nth-child(1){
    font-size: 36px;
    font-weight: bold;
    color: #FDEACA;
    line-height: 49px;
  }
  .share-title-text>p:nth-child(2){
    font-size: 18px;
    color: #FDEACA;
    line-height: 24px;
  }
  .share-module{
    position:relative;
    display:flex;
  }
  .share-product-item{
    width: 540px;
    background: #FFFFFF;
    border-radius: 10px;
    padding:18px 20px 10px 20px;
    margin-right:16px;
    z-index:2;
  }
  .share-product-item:nth-of-type(2){
    margin-right:0;
  }
  .share-sale-title{
    height: 28px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #723600;
    font-size: 20px;
    line-height: 28px;
    margin: 2px 0 5px 0;
  }
  .share-text{
    padding-left: 20px;
  }
  .share-text>ul>li{
    font-size: 16px;
    color: #723600;
    line-height: 20px;
    /* list-style-type: disc; */
    padding-bottom: 7px;
    position:relative;
  }
  .share-text>ul>li:before{
    content: '';
    width: 6px;
    height: 6px;
    background: #723600;
    position: absolute;
    border-radius: 50%;
    top: 45%;
    transform: translateY(-45%);
    left: -15px;
  }
  .share-text>ul>li>span{
    font-size: 22px;
    font-weight: bold;
    color: #E75940;
    line-height: 24px;
  }
  .share-product--price .fn-compareat_price,.share-product--price .price__regular{
    flex-direction: row;
    font-size: 22px;
    font-weight: bold;
    color: #E75940;
    line-height: 30px;
    align-items: baseline;
  }
  .share-product--price .fn-compareat_price .fn-compare-at_price{
    font-size: 14px;
    color: #723600;
    line-height: 19px;
    padding-left:5px;
    font-weight: 400;
  }
  .share-product--price{
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    align-items: end;
  }
  .share-sold{
    display: flex;
    width: 116px;
    height: 23px;
    background-image: linear-gradient(180deg, rgba(255, 203, 127, 1), rgba(255, 155, 72, 1));
    border-radius: 5px;
    padding: 1px;
    font-size: 16px;
    line-height: 22px;
    color: #723600;
  }
  .share-sold>div:nth-child(1){
    background: linear-gradient(180deg, #FFE7BA 0%, #FFCB84 100%);
    border-radius: 5px 0px 0px 5px;
    padding-left: 4px;
    flex: 1;
  }
  .share-sold>div:nth-child(1)>img{
    display: inline-block;
    vertical-align: sub;
  }
  .share-sold>div:nth-child(2){
    text-align: center;
    flex: 1;
    background: linear-gradient(180deg, #FFF8ED 0%, #FFEED7 100%);
    border-radius: 0 5px 5px 0;
  }
  .share-addcart-sale .button--full-width{
    height: 50px;
    background: linear-gradient(180deg, #FFB56A 0%, #E7583F 100%);
    border-radius: 4px;
    --border-offset: none;
    --border-opacity: none;
  }
  .activity-rules{
    position: absolute;
    right: 0;
    width: 507px;
  }
  .rules-text{
    padding: 26px 0 40px 50px;
  }
  .rules-text>ul{
    font-size: 22px;
    color: #E75940;
    line-height: 38px;
  }
  .rules-text>ul>p{
    font-size: 26px;
    font-weight: bold;
    color: #E75940;
    line-height: 38px;
    padding-bottom: 12px;
  }
  .fn-bg-small-out{
    height: 190px;
    position: absolute;
    top: -42px;
    width: 100%;
    background: linear-gradient(180deg, rgba(255, 231, 184, 1), rgba(255, 203, 129, 1));
    border-radius: 80px;
    padding: 2px;
  }
  .fn-bg-small-in{
    background: linear-gradient(180deg, #FFBE7E 0%, #F07F39 100%);
    height: 100%;
    border-radius: 80px;
  }
   @media screen and (max-width:1720px){
    .share-width{
      width:88%;
    }
    .share-product-item{
      width:33.3%;
    }
    .activity-rules{
      width:33.3%;
    }
    .rules-text{
      padding: 0 10px 20px 34px;
    }
  }
   @media screen and (max-width:1660px){
     .rules-text>ul>p{
       font-size: 22px;
       line-height: 29px;
       padding-bottom: 0px;
     }
     .rules-text>ul {
       font-size: 18px;
       line-height: 28px;
     }
   }
   @media screen and (max-width:1440px){
     .share-title-text>p:nth-child(1) {
      font-size: 28px;
     }
     .share-title-text>p:nth-child(2) {
      font-size: 16px;
     }
   }
  @media screen and (max-width:1024px){
    .share-title-text>p:nth-child(1) {
      font-size: 22px;
      line-height: 40px;
    }
    .share-title-text>p:nth-child(2) {
      font-size: 12px;
      line-height: 16px;
    }
    .share-title>picture>img{
      width:90%;
    }
  }
   @media screen and (max-width:820px){
     .share-sold-box{
       height:23px;
     }
     .share-width{
      width:93.6%;
    }
     .fn-bg-small-out{
        height: 57px;
        top: -13px;
        border-radius: 18px;
     }
     .fn-bg-small-in{
        border-radius: 18px;
     }
     .share-bg{
        border-radius: 18px;
        clip-path: inset(0 round 18px);
        margin-top:13px;
        padding: 15px 7px;
     }
     .share-title>picture>img{
       width:auto;
     }
     .share-title-text{
       transform: translateX(-50%);
       top:5px;
       width:100%;
     }
     .share-title-text>p:nth-child(1) {
      font-size: 16px;
      line-height: 22px;
     }
     .share-title-text>p:nth-child(2){
        font-size: 14px;
        line-height: 19px;
     }
     .share-title{
       padding-bottom:8px;
     }
     .share-product-item{
       margin-right:5px;
       padding:5px 5px 10px;
     }
     .share-sale-title{
        font-size: 14px;
        height: 40px;
        line-height: 19px;
         -webkit-line-clamp: 2;
     }
    .share-text>ul>li {
      font-size: 14px;
    }
    .share-text>ul>li>span {
      font-size: 16px;
      line-height: 19px;
    }
     .share-product--price .fn-compareat_price .fn-compare-at_price{
      font-size: 12px;
      line-height: 16px;
     }
     .share-product--price .fn-compareat_price,.share-product--price .fn-compareat_price,.share-product--price .price__regular{
        font-size: 16px;
        line-height: 22px;
     }
     .share-product--price{
        flex-direction: column;
        align-items: start;
        margin-bottom: 10px;
     }
     .share-sold{
       margin-top:0;
     }
     .share-addcart-sale .button--full-width{
        height: 40px;
        min-height: 40px;
       padding: 0;
     }
     .rules-text{
       padding-left: 10px;
     }
     .rules-text>ul>p {
      font-size: 16px;
     }
     .rules-text>ul {
      font-size: 14px;
      line-height: 22px;
    }
     .super-shopping-share{
       padding-top: 15px;
     }
   }
  @media screen and (max-width:750px){
    .share-product-item{
      width:49%;
      float: left;
    }
    .share-module{
      display:block;
    }
    .activity-rules {
      width: 100%;
      overflow: hidden;
      position: relative;
    }
    .rules-text>ul>p{
      line-height: 38px;
    }
    .activity-rules>div:nth-child(2)>img{
      margin:0 auto;
    }
    .share-text>ul>li:before{
      left: -10px;
    }
  }
   @media screen and (max-width:450px){
     .share-text {
      padding-left: 10px;
    }
   }
</style>
<div class="super-shopping-share" id="{{ section.settings.id }}">
  <div class="share-width">
    <div class="fn-bg-small-out">
      <div class="fn-bg-small-in"></div>
    </div>
    <div class="share-bg">
      <div class="share-title">
        <picture>
          <source media="(max-width: 820px)" srcset="{{ section.settings.title_background_mobile | img_url:'334x' }}">
          <source media="(min-width: 821px)" srcset="{{ section.settings.title_background | img_url:'812x' }}">
          <img src="{{ section.settings.title_background | img_url:'812x' }}">
        </picture>
        <div class="share-title-text">
          <p>{{ section.settings.title }}</p>
          <p>{{ section.settings.desc }}</p>
        </div>
      </div>
      <div class="share-module">
        {% for block in section.blocks %}
          <div class="share-product-item">
              {%- if block.settings.product.featured_media -%}
                <a href="{{ block.settings.product.url }}">
                  <img
                    class="img-first"
                    src="{{ block.settings.product.featured_media | img_url: '500x' }}"
                    alt="{{ block.settings.product.featured_media.alt | escape }}"
                    {% unless lazy_load == false %}
                      loading="lazy"
                    {% endunless %}
                  >
                </a>
              {%- endif -%}
            <div>
              <div class="share-product-layout">
                <div class="share-sale-title t">
                  <a href="{{ block.settings.product.url }}" class="t">{{ block.settings.product.title | escape }}</a>
                </div>
                <div class="share-text">
                  {{ block.settings.share_html }}
                </div>
                <div class="share-product--price">
                  <div>
                    {% render 'sffers-price', product: block.settings.product, price_class: '' %}
                  </div>
                  <div class="share-sold-box">
                     {% if block.settings.sold_num != blank %}
                      <div class="share-sold">
                        <div>
                          <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/4_2x_af7b34f9-0e99-46a0-ae4f-3ddb66119908.png?v=1693968507" >
                          <span>Sold</span>
                        </div>
                        <div>
                          {{ block.settings.sold_num }}
                        </div>
                      </div>
                    {% endif %}
                  </div>
                </div>
                 <div class="share-addcart-sale">
                  {% render 'easter-addCart', product: block.settings.product %}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
        <div class="activity-rules">
          <div class="rules-text">
            {{ section.settings.activity_html }}
          </div>
          <div>
            <img src="{{ section.settings.activity_image | img_url:'507x' }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Super-Shopping-Share",
    "settings": [
      {
        "type": "text",
        "id": "id",
        "label": "id(页面唯一性，全英文)"
      },
      {
        "type":"image_picker",
        "id":"title_background",
        "label":"title background"
      },{
        "type":"image_picker",
        "id":"title_background_mobile",
        "label":"title background mobile"
      },{
        "type":"text",
        "id":"title",
        "label":"title"
      },{
        "type":"text",
        "id":"desc",
        "label":"desc"
      },{
        "type":"html",
        "id":"activity_html",
        "label":"activity html"
      },{
        "type":"image_picker",
        "id":"activity_image",
        "label":"activity image"
      }
    ], 
    "max_blocks": 2,
    "blocks":[
      {
        "type":"bundle",
        "name":"bundle",
        "settings":[
          {
            "type": "product",
            "id": "product",
            "label": "product item"
          },{
            "type":"text",
            "id":"sold_num",
            "label":"sold number"
          },{
            "type":"html",
            "id":"share_html",
            "label":"share html"
          }
        ]
      }
    ],
   "presets": [
      {
        "name": "Super-Shopping-Share"
      }
    ]
  }
{% endschema %}

