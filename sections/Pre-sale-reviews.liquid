
<div class="fn-sale-reviews">
  <div class="fn-reviews-video">
    <div class="fn-reviews-title t">Boutique Videos</div>
<!--     <video id="reviews" width="100%" height="100%" style="border-radius: 15px;" controls muted >
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/mp4">
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/ogg">
    </video> -->
     <div id="reviews_video">
         <iframe width="100%" height="100%" src="https://www.youtube.com/embed/SzmZ7OQRMWc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
  </div>
  <div class="fn-reviews-label">
    {% if section.settings.image_label != blank %}
        {% assign image = section.settings.image_label | img_url: '1600x' %}
        <img src="{{ image }}" alt="">
    {% endif %}
<!--     <div class="fn-label-main">{{section.settings.label_main}}</div> -->
  </div>
    <div class="fn-reviews-press">
        {% if section.settings.image_press != blank %}
            {% assign image = section.settings.image_press | img_url: '1920x' %}
            <img src="{{ image }}" alt="">
        {% endif %}
  </div>
  <div class="fn-reviews-greatwork">
    <div class="fn-reviews-title t">Great Work</div>
    <ul class="fn-greatwork-mian">
      {% for block in section.blocks %}
      <li class="fn-greatwork-list">
          <div>
              {% if block.settings.img_top != blank %}
                  {% assign image = block.settings.img_top | img_url: '520x' %}
                  <img src="{{ image }}" alt="">
              {% endif %}
          </div>
          <div>
              {% if block.settings.img_bottom != blank %}
                  {% assign image = block.settings.img_bottom | img_url: '520x' %}
                  <img src="{{ image }}" alt="">
              {% endif %}
          </div>
      </li>
      {% endfor %}
</ul>

  </div>
</div>
{% schema %}
  {
    "name": "reviews",
    "settings": [
      {
			"type": "image_picker",
			"id": "image_label",
			"label": {
				"en": "Image",
				"zh-CN": "图片"
			}
		},
		{
			"type": "html",
			"id": "label_main",
			"label": {
				"en": "label",
				"zh-CN": "标签"
			}
		},
        {
			"type": "image_picker",
			"id": "image_press",
			"label": {
				"en": "Image",
				"zh-CN": "图片"
			}
		}
    ],
	"blocks": [{
		"type": "GreatWork",
		"name": {
			"en": "Great Work",
			"zh-CN": "展示"
		},
		"settings": [
			{
				"type": "image_picker",
				"id": "img_top",
				"label": {
					"en": "Image top",
					"zh-CN": "图片"
				}
			},
   			{
				"type": "image_picker",
				"id": "img_bottom",
				"label": {
					"en": "Image bottom",
					"zh-CN": "图片"
				}
			}
		]
	}]
  }
{% endschema %}

