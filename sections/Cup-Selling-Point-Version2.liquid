  "name": "Cup-Selling-Point2",
  "max_blocks":4,
  "settings": [
    {
     "type":"image_picker",
     "id":"background_image",
     "label":"background image"
    },{
     "type":"image_picker",
     "id":"background_image_mobile",
     "label":"background image mobile"
    },
    {
      "type":"text",
      "id":"title",
      "label":"title"
    }
  ],
  "blocks":[
    {
      "type":"brand",
      "name":{
        "en":"image",
        "zh-CN":"image"
        },
      "settings":[
         {
          "type":"image_picker",
          "id":"image",
          "label":{
            "en":"Image",
            "zh-CN":"图片"
           }
         },
        {
          "type":"image_picker",
          "id":"image_mobile",
          "label":"image mobile"
        },
        {
          "type":"text",
          "id":"title",
          "label":"title"
        },
        {
          "type":"text",
          "id":"text",
          "label":"text"
        }
      ]
    }
  ],
  "presets":[{
    "name":"Cup-Selling-Point-Version2",
    "blocks":[
        {
        "type":"brand"
        }
      ]
  }]
}
