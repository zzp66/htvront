<style>
  .zone-freegift{
    background: #FFF6D6;
    box-shadow: 0px 6px 14px 0px rgba(95,4,4,0.25);
    border-radius: 20px;
    padding:24px 65px 20px;
    margin-top:40px;
  }
  .zone-swiper{
    width:100%;
    align-items: center;
    justify-content: start;
  }
  .zone-swiper .swiper-slide{
    max-width:450px;
    background-color: #fff;
    padding: 14px 15px 20px 15px;
    border-radius: 8px;
  }
  .gift-width{
    position: relative;
  }
  .zone-swiper .button--full-width{
    padding: 0;
    --border-offset: none;
    --border-opacity: none;
    height: 50px;
    background: linear-gradient(91deg, #FE4E43 0%, #FF7B36 100%);
    border-radius: 4px;
  }
  .zone-swiper .fn-product-title .t{
    height: 45px;
    font-size: 20px;
    color: #333;
    line-height: 23px;
  }
  .zone-swiper .fn-color-attr{
    display:none;
  }
  .zone-swiper .fn-product-layout{
    margin-bottom:22px;
  }
  .zone-freegift>div:nth-child(1){
    font-size: 32px;
    font-weight: bold;
    color: #C63D39;
    text-align: center;
  }
 .zone-freegift>div:nth-child(2){
    font-size: 16px;
    color: #C63D39;
    padding-bottom: 10px;
    text-align: center;
 }
  .gift-width .swiper-button-prev{
    left: -50px;
    width: 27px;
    height: 121px;
    background: #FFFFFF;
    border-radius: 4px;
    box-shadow: 0px 4px 4px 0px rgba(95,4,4,0.25);
  }
  .gift-width .swiper-button-next{
    right: -50px;
    border-radius: 4px;
    width: 27px;
    height: 121px;
    background: #FFFFFF;
    box-shadow: 0px 4px 4px 0px rgba(95,4,4,0.25);
  }
  .gift-width .swiper-button-prev>img{
    margin:0 auto;
    padding-top: 52px;
    padding-right: 2px;
  }
  .gift-width .swiper-button-next>img{
    margin:0 auto;
    padding-top: 52px;
    padding-left: 2px;
  }
  .gift-width .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
    opacity: 1;
  }
  .gift-width .swiper-button-next.swiper-button-disabled>img, .swiper-button-prev.swiper-button-disabled>img{
    opacity: .35;
  }
  .gift-width .swiper-button-next,.gift-width .swiper-button-prev{
    top:40%;
    z-index:2;
  }
  .zone-freegift .fn-product-price{
    text-align:right;
  }
  .zone-freegift .fn-product-price span{
    color: #FF6301;
  }
  .zone-freegift .fn-compareat_price .fn-compare-at_price{
    color: #723600;
    font-weight: 400;
  }
  @media screen and (max-width: 1720px){
    .zone-swiper .swiper-slide{
      max-width: 30%;;
    }
    .zone-freegift>div:nth-child(1){
      font-size:28px;
    }
    .zone-freegift>div:nth-child(2){
      font-size:20px;
    }
  }
  @media screen and (max-width: 1280px){
    .zone-swiper .swiper-slide {
      max-width: 29.5%;
    }
  }
  @media screen and (max-width: 1024px){
    .zone-freegift>div:nth-child(2){
      padding: 0;
      padding-bottom: 10px;
    }
    .zone-swiper .swiper-slide{
      max-width: 28.5%;
    }
  }
  @media screen and (max-width: 820px){
    .zone-freegift{
      background:#FFEDAC;
      padding: 10px 6px 0;
      margin-top:20px;
      border-radius: 6px;
    }
    .zone-freegift>div:nth-child(1){
      font-size: 16px;
      line-height: 20px;
    }
    .zone-freegift>div:nth-child(2){
      font-size: 14px;
      line-height: 20px;
    }
    .zone-swiper .swiper-slide{
      padding:5px 4px 10px 4px;
      max-width: 30.6%;
      border-radius: 4px;
    }
    .zone-swiper .fn-product-title .t {
      height: 40px;
      font-size: 14px;
      line-height: 19px;
    }
    .zone-freegift .fn-product-layout{
      flex-direction: column;
    }
    .zone-freegift  .fn-product-title {
        width: 100%;
    }
    .zone-freegift  .fn-product-price {
        width: 100%;
      text-align:left;
    }
    .zone-freegift .fn-compareat_price{
      flex-direction: row;
      align-items: end;
    }
    .zone-swiper .fn-product-layout {
      margin-bottom: 7px;
      margin-top: 4px;
    }
    .zone-swiper .button--full-width{
      border-radius: 4px;
      height: 40px;
      min-height: 40px;
    }
    .zone-swiper{
      display:flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    .zone-gift-main{
      width:49%;
      background-color: #fff;
      padding: 5px 5px 8px;
      margin-bottom:8px;
    }
    .zone-gift-main:nth-child(2n){
      margin-left:7px;
    }
    .zone-freegift .fn-product-price span{
      font-size:16px;
    }
  }
   @media screen and (max-width: 750px){
     .zone-swiper .swiper-slide{
       max-width: 48.1%;
     }
     .gift-width .swiper-button-next{
       right:0;
      border-radius: 2px;
      width: 15px;
      height: 39px;
     }
     .gift-width .swiper-button-next>img{
       padding-top:11px;
     }
     .gift-width .swiper-button-prev{
       left:0;
      border-radius: 2px;
      width: 15px;
      height: 39px;
     }
      .gift-width .swiper-button-prev>img{
       padding-top:11px;
      width: 11px;
     }
   }
    @media screen and (max-width: 450px){
     .zone-gift-main{
       max-width: 47.7%;
     }
    }
</style>

{% if section.settings.title != blank %}
  
<div class="zone-freegift" id="{{ section.settings.id }}">
  <div>
    {{ section.settings.title }}
  </div>
  <div>
    {{ section.settings.desc }}
  </div>
  <div class="gift-width show-in-pc">
    <div class="swiper-container" id="swiper-container_{{ section.id }}">
      <div class="swiper-wrapper zone-swiper">
         {% for block in section.blocks %}
            <div class="swiper-slide">
              {% render 'product-Model',
                card_product: block.settings.product_item,
                progress: false,
                colorSize: true,
                buttonSeat: 'fileSteam',
                buttonText: 'ADD TO CART',
                title: 'flex',
                pirce: 'intitle'
              %}
            </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-button-next">
      <img src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/Rectangle_45.png?v=1697522899">
    </div>
    <div class="swiper-button-prev">
      <img src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/Rectangle_45_1.png?v=1697522899">
    </div>
  </div>
  <div class="gift-width show-in-mobile">
    <div class="zone-swiper">
     {% for block in section.blocks %}
       <div class="zone-gift-main">
         {% render 'product-Model',
          card_product: block.settings.product_item,
          progress: false,
          colorSize: true,
          buttonSeat: 'fileSteam',
          buttonText: 'ADD TO CART',
          title: 'flex',
          pirce: 'intitle'
        %}
       </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
<script>
$(function(){
   var mySwiper = new Swiper('#swiper-container_{{ section.id }}',{
    spaceBetween :20,
    slidesPerView: 3,
    observer: true, 
    observeParents: true ,
     freeMode:true,
     navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints:{
       1440:{
        spaceBetween: 11,
      },
      750: {
        slidesPerView: 2,
        spaceBetween: 4,
      }
    }
  })
  if($('.swiper-button-prev').hasClass('swiper-button-disabled') && $('.swiper-button-next').hasClass('swiper-button-disabled')){
    $('.swiper-button-prev').css('display','none')
    $('.swiper-button-next').css('display','none')
  }
})

$(function (){
    var gift_arr = ['6716454273157', '6716455682181', '6716455944325','6716456140933','6892368363653','6892370329733','6892388122757','6892374622341'];
    $(".product-form__submit").click(function(){
      var button_id = $(this).attr('id').substring(9);
       if(gift_arr.indexOf(button_id) != -1 ) {
           setTimeout(function(){
               $('.zone-freegift .product-form__submit').attr('disabled',true);
            },1000);
       } else {
         $('.zone-freegift .product-form__submit').attr('disabled',false);
       }  
    });
})
</script>
