            class="more-platform-img-mobile more-platform-img"
            src="{{ block.settings.show_picker_moblie| img_url:'304x' }}"
          >
        {% endif %}
      {% endif -%}
    {% endfor -%}
  </div>
  <div>
    {% for block in section.blocks %}
