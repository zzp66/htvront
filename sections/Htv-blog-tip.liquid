{%- style -%}
  #shopify-section-{{ section.id }} .htv-blog-tip{
    background:{{ section.settings.bgColor }};
  }
{%- endstyle -%}
<style>
  .htv-blog-tip{
    padding:50px 0 50px;
  }
  .htv-tip-content{
    width:1600px;
    margin:0 auto;
    display:flex;
    flex-wrap:wrap
  }
  .htv-tip-item{
    width:48.75%;
    margin-right:20px;
    background: #FFFFFF;
    box-shadow: 0px 3px 8px 0px rgba(151,106,21,0.29);
    border-radius: 4px;
    margin-bottom:10px;
    min-height:54px;
    padding:15px 50px;
    font-size: 18px;
    line-height: 24px;
  }
  .htv-tip-item:nth-child(2n){
    margin-right:0
  }
  .htv-tip-active{
    background: linear-gradient(180deg, #FFEBC7 0%, #FFB76E 100%);
    box-shadow: 0px 3px 8px 0px rgba(151,106,21,0.29);
    color:#FF7604
  }
    @media screen and (max-width: 1650px){
    .htv-tip-content{
      width:83.33%
    }
  }
  @media screen and (max-width: 1180px){
    .htv-tip-item{
      font-size:16px;
      padding:15px
    }
  }
   @media screen and (max-width: 1024px){
    .htv-tip-content{
      justify-content: space-between;
    }
     .htv-tip-item{
       margin-right:0
     }
   }
  @media screen and (max-width: 750px){
    .htv-blog-tip{
      padding:20px 0
    }
    .htv-tip-content{
      width:93.6%
    }
    .htv-tip-content{
      display:block;
      margin-top:10px
    }
    .htv-tip-item{
      width: 100%;
      height: 60px;
      padding: 0 19px;
      font-size: 14px;
      display: flex;
      align-items: center;
    }
  }
</style>
<div class="htv-blog-tip">
  <div class="htv-blog-head">
    <div class="htv-blog-title">
      {{ section.settings.title }}
    </div>
  </div>
  <div class="htv-tip-content">
    {% for block in section.blocks %}
      <div class="htv-tip-item">
        <a href="{{ block.settings.link }}">
          {{ block.settings.tip }}
        </a>
      </div>
    {% endfor %}
  </div>
</div>
<script>
  $(function(){
    $('.htv-tip-item').on('mouseenter', function(e){
      if(document.body.clientWidth < 1366) return
      let index = $(this).index()
      $('.htv-tip-item').eq(index).addClass('htv-tip-active')
    }).on('mouseleave', function(e){
      if(document.body.clientWidth < 1366) return
      let index = $(this).index()
      $('.htv-tip-item').eq(index).removeClass('htv-tip-active')
    })
  })
</script>
{% schema %}
{
  "name": "Htv Blog Tip",
  "settings": [{
    "type":"color",
    "id":"bgColor",
    "label":"bgColor"
  },{
    "type":"text",
    "id":"title",
    "label":"title"
  }],
  "blocks":[{
    "type":"linkUrl",
    "name":"tips",
    "settings":[{
      "type":"text",
      "id":"tip",
      "label":"tip"
    },{
      "type":"text",
      "id":"link",
      "label":"link"
    }]
  }],
  "presets":[{
    "name":"Htv Blog Tip"
  }]
}
{% endschema %}

