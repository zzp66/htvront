<style>
  div:empty {
    display: block;
  }
  .fn-index-swiper .swiper-slide {
    width: 100%;
  }
  .fn-index-swiper .swiper-slide img {
    width:100%;
    height: auto;
  }
  .fn-index-swiper .prev-left, .next-right {
    width: 50px;
    height: 50px;
  }
  .prev-left {
    left: 5%;
  }
  .next-right {
    right: 5%;
  }
  .fn-index-swiper .swiper-button-next{
    background-size: 100% auto;
    background-image:url("https://cdn.shopifycdn.net/s/files/1/0640/6802/6590/files/23_2x_f7ff6671-05c3-4eb4-aae0-bf987a27030a.png?v=1649823742");
  }
  .fn-index-swiper .swiper-button-prev{
    background-size: 100% auto;
    background-image:url("https://cdn.shopifycdn.net/s/files/1/0640/6802/6590/files/23_2x_1.png?v=1649823742");
  }
  @media screen and (max-width: 480px){ 
    .fn-index-swiper .prev-left, .next-right {
      width: 17px;
      height: 17px;
    }
    .next-right {
      right: 2%;
    }
    .prev-left {
      left: 2%;
    }
  }
</style>
<div class="fn-index-swiper">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
      <div class="swiper-slide">
        {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}">
          {% endif %}
          {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1920 | image_tag: widths: '640, 1920', width: nil, alt: block.settings.image.alt }}
          {% endif %}
          {% if block.settings.link != blank %}
        </a>
        {% endif %}
      </div>
      {% endfor %}

    </div>
    <div class="swiper-button-prev prev-left"></div>
    <div class="swiper-button-next next-right"></div>
  </div>
</div>

<script>
  $(function(){
    var bannerSwiper = new Swiper('.fn-index-swiper .swiper-container', {
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      autoHeight: true,
      autoplay:true,
      loop : true,
    });
  });
</script>

