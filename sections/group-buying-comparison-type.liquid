<style>
  .cup-comparison-type{;
    background-color: {{ section.settings.bg_color }};
    {% if section.settings.background_image != blank   %}
      background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
      background-size: 100% 100%;
      background-repeat: no-repeat;
    {% endif %}  
    overflow: hidden;
    padding: 20px 0 30px 0;
  }
  
  @media screen and (max-width: 820px){
    .cup-comparison-type{
      padding:15px 0 20px 0;
    }
  }
  @media screen and (max-width: 750px){ 
    .cup-comparison-type{
     background:{{section.settings.bg_color}}
    }
   .cup-comparison-type>.scroll-type{
      overflow-x: scroll;
      width: 93.3%;
      margin: 0 auto;
      margin-bottom:10px;
    }
    .cup-comparison-type>.scroll-type>div{
      width:637px;
      margin: 0 auto;
      padding-bottom:20px;
    }
    .scroll-type::-webkit-scrollbar {
        width: 100%;
        height: 7px;
    }
    .scroll-type::-webkit-scrollbar-thumb {
        background-color: #FFAA4C;
      border-radius: 4px;
    }
    .scroll-type::-webkit-scrollbar-track {
        background: #FFF6E4;
      border-radius: 4px;
    }
    .comparison-img{
      width:100%;
    }
  }
</style>
<div class="cup-comparison-type">
  <div class="scroll-type">
    <div>
      <picture>
        <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'637x' }}" />
        <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1214x' }}" />
        <img src="{{ section.settings.image | img_url: '1214x' }}" class="comparison-img"/>
      </picture>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Group-Comparison-Type",
    "settings": [
     {
       "type":"color",
       "id":"bg_color",
       "label":"background color"
     },
     {
       "type":"image_picker",
       "id":"background_image",
       "label":"background image"
     },
     {
       "type":"image_picker",
       "id":"image",
       "label":"image"
     },{
       "type":"image_picker",
       "id":"image_mobile",
       "label":"image mobile"
     }],
    "presets":[{
      "name":"Group-Comparison-Type"
    }]
  }
{% endschema %}

