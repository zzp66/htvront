<style>
  .cup-presell-crafters{
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-size: 100% 100%;
    background-position: center;
    overflow: hidden;
    padding: 50px 0 46px 0;
  }
  .cup-presell-crafters-header{
    width:640px;
    text-align:center
  }
  .cup-presell-crafters-title{
    font-size: 36px;
    font-weight: bold;
    color: #333333;
    line-height: 49px;
    margin-bottom:16px
  }
  .cup-presell-crafters-desc{
    font-size: 18px;
    color: #333333;
    line-height: 24px;
  }
  .presell-crafters-width{
    display:flex;
    align-items: center;
  }
   @media screen and (max-width: 1720px){
     .presell-crafters-width{
       width:83.3%;
        margin: 0 auto;
     }
   }
   @media screen and (max-width: 1180px){
    .cup-presell-crafters-title{
      font-size:28px;
      line-height: 36px;
      margin-bottom:7px
    }
    .cup-presell-crafters-desc{
     font-size:16px
    }
  }
  @media screen and (max-width: 820px){
    .cup-presell-crafters{
      background:#FFF6D2;
    }
  }
  @media screen and (max-width: 750px){
    .cup-presell-crafters-header{
      width:100%;
      margin-bottom:4px
    }
    .cup-presell-crafters{
      display:block;
      padding:20px 10px 23px
    }
    .cup-presell-crafters-title{
      font-size:16px;
      line-height: 22px;
    }
   .cup-presell-crafters-desc{
     font-size:14px;
     line-height: 19px;
   }
    .presell-crafters-width{
      flex-direction: column;
    }
  }
</style>
<div class="cup-presell-crafters">
  <div class="presell-crafters-width">
    <div class="cup-presell-crafters-header">
      <p class="cup-presell-crafters-title">{{ section.settings.title }}</p>
      <p class="cup-presell-crafters-desc">{{ section.settings.desc }}</p>
    </div>
    <div>
      <picture>
        <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'710x' }}">
        <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1104x' }}">
        <img src="{{ section.settings.image | img_url:'1104x' }}">
      </picture>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Cup-Presell-Crafters",
  "settings": [
    {
      "type":"image_picker",
      "id":"background_image",
      "label":"background image"
    },
    {
      "type":"text",
      "id":"title",
      "label":"title"
  },
    {
      "type":"text",
      "id":"desc",
      "label":"desc"
  },{
        "type":"image_picker",
        "id":"image",
        "label":"image"
    },{
        "type":"image_picker",
        "id":"image_mobile",
        "label":"image mobile"
    }
  ],
  "presets":[{
    "name":"Cup-Presell-Crafters"
  }]
}
{% endschema %}

