<style>
  body{
    letter-spacing: 0;
  }
  .super-shopping{
    background-image:url('{{ section.settings.image | img_url:'1920x' }}');
    background-size: 100%;
    /* background-position: center; */
    padding-top: 37%;
    overflow: hidden;
    padding-bottom: 100px;
    position: relative;
    background-color: #FFD536;
    background-repeat: no-repeat;
  }
  .swiper-banner{
    position: absolute;
    top: 258px;
    left: 14%;
  }
  .banner-container{
    width:490px;
    height:158px;
    overflow: hidden;
  }
  .swiper-slide-shadow-top,.swiper-slide-shadow-bottom{
    display:none;
  }
  @media screen and (max-width:1720px){
   .swiper-banner {
      left: 12%;
      top: 4.5%;
    }
    .super-shopping{
      padding-top:40%;
    }
  } 
  @media screen and (max-width:1520px){
    .swiper-banner{
      left: 11%;
      top: 4%;
    }
    .banner-container{
      width:470px;
    }
  }
  @media screen and (max-width:1440px){
    .banner-container{
      width: 400px;
    }
    .swiper-banner {
      top: 195px;
    }
  }
  @media screen and (max-width:1280px){
    .banner-container{
      width: 350px;
    }
    .swiper-banner {
      top: 170px;
    }
  }
  @media screen and (max-width:1180px){
     .swiper-banner {
      top: 155px;
    }
  }
  @media screen and (max-width:1024px){
    .swiper-banner {
      left: 13%;
      top: 135px;
    }
    .banner-container {
      width: 280px;
    }
  }
  @media screen and (max-width:820px){
    .swiper-banner {
      left: 10%;
      top: 100px;
    }
  }
  @media screen and (max-width:750px){
    .super-shopping{
      background-image:url('{{ section.settings.image_mobile | img_url:'750x' }}');
      background-size: 100%;
      /* background-position: center; */
      padding-top: 130%;
    }
    .swiper-banner {
      left: 50%;
      transform: translate(-50%);
      top: 2.5%;
    }
  }
  @media screen and (max-width:540px){
    .swiper-banner {
      top: 2.5%;
    }
  }
  @media screen and (max-width:450px){
    .swiper-banner{
      top:103px;
      transform: translateX(-50%);
    }
    .banner-container {
      width: 240px;
      height: 84px;
    }
  }
  @media screen and (max-width:414px){
    .swiper-banner {
      left: 48%;
      top:94px;
    }
  }
  @media screen and (max-width:410px){
    .swiper-banner {
      left: 44%;
      transform: translateX(-44%);
      top:97px;
    }
    .banner-container {
      width: 210px;
      height: 65px;
    }
  }
   @media screen and (max-width:390px){
     .swiper-banner {
      top:90px;
    }
   }
</style>
<div class="swiper-banner" >
  <div>
    <!-- <picture>
      <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'750x' }}">
      <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1920x' }}">
      <img src="{{ section.settings.image | img_url:'1920x' }}">
    </picture> -->
      <div class="banner-container swiper-container"  id="swiper-container_{{ section.id }}">
        <div class="swiper-wrapper">
           {% for block in section.blocks %}
              <div class="swiper-slide swiper-image">
                <img src="{{ block.settings.image | img_url: '559x' }}" alt="">
              </div>
           {% endfor %}
        </div>
      </div>
  </div>
</div>
 <script>
   $(document).ready(function(){
     var mySwiper = new Swiper('#swiper-container_{{ section.id }}',{
        direction: "vertical",
        loop: true,
        autoplay: true,
        effect: "flip",
        autoplay: {
          disableOnInteraction: false
        },
        pagination: {
          el: null
        }
    })
   })
</script>
{% schema %}
{
  "name": "Swiper-Banner",
  "settings": [
     {
      "type":"image_picker",
      "id":"image",
      "label":{
          "en":"Image",
          "zh-CN":"图片"
      }
    },
    {
      "type":"image_picker",
      "id":"image_mobile",
      "label":{
          "en":"Image mobile",
          "zh-CN":"手机端图片"
      }
    }
  ],
   "blocks":[{
    "type":"image",
    "name": "image",
      "settings": [{
        "type":"image_picker",
        "id":"image",
        "label":"image"
      }]
   }],
  "presets":[
      {
        "name":"Swiper-Banner"
      }
  ]
}
{% endschema %}

