{%- style -%}
    #shopify-section-{{ section.id }} .fn-advertising-space {
        background-color: {{ section.settings.bg_color }};
    }
    #shopify-section-{{ section.id }} .fn-advertising-space a {
        color: {{ section.settings.font_color }};
    }
{%- endstyle -%}
<style>
    .fn-advertising-space {
        padding: 5px;
        display: none;
    }
    .fn-advertising-space .swiper-slide {
        width: 100%;
        text-align: center;
    }
    @media screen and (max-width: 768px){
        .fn-advertising-space {
            display: block;
        }
    }
</style>
<div class="fn-advertising-space">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="swiper-slide">
                {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
                    {% endif %}
                    {% if block.settings.desc != blank %}
                    {{ block.settings.desc }}
                    {% endif %}
                    {% if block.settings.link != blank %}
                </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<script>
    $(function(){
        var bannerSwiper = new Swiper('.fn-advertising-space .swiper-container', {
            autoHeight: true,
            height: 26,
            speed: 500,
            loop: true,
            observer: true,
            observeParents: true,
            autoplay: {
                delay: 1500,
                stopOnLastSlide: false,
                disableOnInteraction: true,
            },
            direction: 'vertical'
        });
    });
</script>

