<div class="cup-two-coupons">
  <div class="cup-two-coupons-box">
    {% for block in section.blocks %}
      <div class="coupons-model">
        <div class="coupons-box">
         {% if block.type == 'bundle' %}
           <div class="top-coupons">
             <picture>
              <source media="(max-width: 750px)" srcset="{{ section.settings.top_bg_img_mobile | img_url:'566x' }}">
              <source media="(min-width: 751px)" srcset="{{ section.settings.top_bg_img | img_url:'517x' }}">
              <img src="{{ section.settings.top_bg_img | img_url:'517x' }}">
            </picture>
            <div class="top-text">
              <p>{{ block.settings.title }}</p>
              {% if block.settings.code_2 != blank %}
                {% assign CLASS_NAME = "top-voucher" %}
              {% else %}
                {% assign CLASS_NAME = "top-voucher single" %}
              {% endif %}
              <div class="{{ CLASS_NAME }}">
                  {{ block.settings.voucher_1 }}
                  {% if block.settings.code_1 != blank %}
                    <span>CODE: {{ block.settings.code_1 }}</span>
                    <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/13_1291c84e-d2e5-4ed5-b050-65ba03739508.png?v=1692259186" onclick="copyticket('{{ block.settings.code_1 }}')">
                  {% endif %}
              </div>
              <div  class="{{ CLASS_NAME }}">
                  {{ block.settings.voucher_2 }}
                  {% if block.settings.code_2 != blank %}
                    <span>CODE: {{ block.settings.code_2 }}</span>
                    <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/13_1291c84e-d2e5-4ed5-b050-65ba03739508.png?v=1692259186" onclick="copyticket('{{ block.settings.code_2 }}')">
                  {% endif %}
              </div>
            </div>
          </div>
           <div class="bottom-coupons">
             <p>{{ block.settings.tips }}</p>
             <span>{{ block.settings.validity_date }}</span>
             <a href="{{ block.settings.button_url }}">
              <img src="{{ block.settings.product_image | img_url:'460x' }}">
             </a>
             <a href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
           </div>
         {% endif %}
         {% if block.type == 'product' %}
           <div class="top-coupons">
             <picture>
              <source media="(max-width: 750px)" srcset="{{ section.settings.top_bg_img_mobile | img_url:'566x' }}">
              <source media="(min-width: 751px)" srcset="{{ section.settings.top_bg_img | img_url:'517x' }}">
              <img src="{{ section.settings.top_bg_img | img_url:'517x' }}">
            </picture>
            <div class="top-text">
              <p>{{ block.settings.title }}</p>
              {% if block.settings.code_2 != blank %}
                {% assign CLASS_NAME = "top-voucher" %}
              {% else %}
                {% assign CLASS_NAME = "top-voucher single" %}
              {% endif %}
              <div class="{{ CLASS_NAME }}">
                 {{ block.settings.voucher_1 }}
                  {% if block.settings.code_1 != blank %}
                    <span>CODE: {{ block.settings.code_1 }}</span>
                    <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/13_1291c84e-d2e5-4ed5-b050-65ba03739508.png?v=1692259186" onclick="copyticket('{{ block.settings.code_1 }}')">
                  {% endif %}
              </div>
              <div class="{{ CLASS_NAME }}">
                  {{ block.settings.voucher_2 }}
                  {% if block.settings.code_2 != blank %}
                    <span>CODE: {{ block.settings.code_2 }}</span>
                    <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/13_1291c84e-d2e5-4ed5-b050-65ba03739508.png?v=1692259186" onclick="copyticket('{{ block.settings.code_2 }}')">
                  {% endif %}
              </div>
            </div>
          </div>
          <div class="bottom-coupons">
            <p>{{ block.settings.tips }}</p>
            <span>{{ block.settings.validity_date }}</span>
            {%- if block.settings.product.featured_media -%}
              <a href="{{ block.settings.product.url }}">
                <img
                  class="img-first"
                  src="{{ block.settings.product.featured_media | img_url: '460x' }}"
                  alt="{{ block.settings.product.featured_media.alt | escape }}"
                  {% unless lazy_load == false %}
                    loading="lazy"
                  {% endunless %}
                >
              </a>
            {%- endif -%}
            <div class="fn-color-attr">
              {%- for option in block.settings.product.options_with_values -%}
                {%- if option.name == 'Colors' or option.name == 'Color' -%}
                  <ul>
                    {%- if option.name == 'Colors' -%}
                      {% assign colorList = block.settings.product.options_by_name.Colors.values | slice: 0, 5 %}
                    {%- else -%}
                      {% assign colorList = block.settings.product.options_by_name.Color.values | slice: 0, 5 %}
                    {%- endif -%}
                    {%- for value in colorList -%}
                      <li>
                        <a href="{{ block.settings.product.url }}?variant={{ block.settings.product.variants[forloop.index0].id }}">
                          {%- if block.settings.product.variants[forloop.index0].featured_image != blank -%}
                            <img
                              src="{{ block.settings.product.variants[forloop.index0].featured_image | img_url: '50x50' }}"
                              alt="{{ value }}"
                            >
                          {%- endif -%}
                        </a>
                      </li>
                    {% endfor %}
                    {%- if option.name == 'Colors' -%}
                      {% assign size = block.settings.product.options_by_name.Colors.values | size | minus: 5 %}
                    {%- else -%}
                      {% assign size = block.settings.product.options_by_name.Color.values | size | minus: 5 %}
                    {%- endif -%}
                    {%- if size > 0 -%}
                      <li class="color-quantity">
                        <a href="{{ block.settings.product.url }}">+{{ size }}</a>
                      </li>
                    {%- endif -%}
                  </ul>
                {%- endif -%}
              {% endfor %}
            </div>
             <div class="heatPress-addcart-sale">
              {% render 'easter-addCart', product: block.settings.product %}
            </div>
          </div>
         {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
