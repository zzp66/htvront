<style>
  .fn-join-buttons{
    width: 80px;
    background: {{ section.settings.bg_color }};
    /* box-shadow: 0px 12px 12px 4px rgba(59,0,0,0.8); */
    border-radius: 5px;
    padding:10px 7px 17px 7px;
    text-align: center;
    position: fixed;
    right: 0;
    top: 60%;
    z-index:10;
    align-items: center;
  }
  .fn-join-buttons>p{
    cursor: pointer;
  }
  .share-buttons>a{
    /* box-shadow: 0px 8px 10px 1px rgba(0,0,0,0.25); */
    border-radius: 10px;
    cursor: pointer;
    padding:10px 0;
  }
  .fn-join-buttons>a:nth-child(2){
    margin-bottom:10px;
  }
  .fn-join-buttons>a>img{
    margin:0 auto;
    padding-top: 10px;
  }
  .fn-join-buttons>p{
    font-size: 14px;
    font-weight: bold;
    text-shadow: 0px 2px 5px rgba(0,0,0,0.1);
    letter-spacing: 0;    
    color: {{ section.settings.text_color }};
  }
  .share-buttons{
    display:none;
  }
  .share-buttons>a>img{
    margin:0 auto;
  }
  @media screen and (max-width:750px){
    .fn-join-buttons{
      width: 49px;
      height: 140px;
      left: 0;
      padding: 2px 5px 12px 4px;
      box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.1);
    }
    .fn-join-buttons>a{
      width: 40px;
      height: 40px;
      box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.1), 0px 2px 4px 0px rgba(0,0,0,0.18);
    }
    .fn-join-buttons>a>img{
      width:28px;
      padding-top: 7px;
    }
    .fn-join-buttons>a:nth-child(2){
      margin-bottom:5px;
    }
    .fn-join-buttons>p{
      line-height:19px;
      padding-bottom: 3px;
    }
  }
</style>
<div class="fn-join-buttons">
  <p>Share on</p>
  <div class="share-buttons">
    <a href="{{ section.settings.twitter_link }}" target="_blank" onclick="getClick('{{ section.settings.twitter_id }}')">
      <img src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/33d94a9e-447d-4bf0-9e04-7bb741eeea4f_1.png?v=1698886980">
    </a>
    <a href="{{ section.settings.facebook_link }}" target="_blank" id="{{ section.settings.facebook_id }}"onclick="getClick('{{ section.settings.facebook_id }}')">
      <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/img_v2_330b376d-885a-42ab-a7b8-44a7491d07ag_1.png?v=1690184277">
    </a>
  </div>
</div>
<script>
  function getClick(name){
     $.ajax({
      type: 'get',
      dataType: 'json',
      url: 'https://qn.htvront.com/htvront-blindBox/click',
      data: {site: 'US',module:'运营资源位',clickName:name}
    });
  }
 $(document).ready(function(){
    $('.fn-join-buttons>p').click(function(){
       $(this).siblings().toggle()
    })
 })
</script>
{% schema %}
  {
    "name": "Common Share Fold",
    "settings": [
      {
        "type":"color",
        "id":"bg_color",
        "label":"background color"
      },
      {
        "type":"color",
        "id":"text_color",
        "label":"text color"
      },
      {
        "type":"text",
        "id":"twitter_id",
        "label":"twitter id"
      },{
        "type":"url",
        "id":"twitter_link",
        "label":"Twitter Link"
      },{
        "type":"text",
        "id":"facebook_id",
        "label":"Facebook id"
      },{
        "type":"url",
        "id":"facebook_link",
        "label":"Facebook Link"
      }
    ],
    "presets":[
        {
          "name":"Common Share Fold"
        }
    ]
  }
{% endschema %}