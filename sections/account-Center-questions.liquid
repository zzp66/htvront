  <ul class="fn-questions-list">
    {% for block in section.blocks %}
    <li>
      {% if block.settings.questionslink != blank %}
      <a href="{{ block.settings.questionslink }}">
        {% endif %}
        <div>
          <span>{%- render 'Questions-img' -%}</span>
          {{block.settings.questions_text}}
        </div>
