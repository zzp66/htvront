<style>
  #shopify-section-{{ section.id }} .fans-hot-sale-bundles{
    padding-top:{{section.settings.padding_top}}px;
    padding-bottom:{{section.settings.padding_bottom}}px;
  }
  #shopify-section-{{ section.id }} .fans-hot-sale-bundles-box{
    padding-bottom:40px;
    width:{{ section.settings.model_width }}px;
    background-color:{{ section.settings.bg_color }};
    {% if section.settings.bg_border_color != blank %}
      border:2px solid {{ section.settings.bg_border_color }};
    {% endif %}
    border-radius: 10px;
    padding:20px 20px 15px;
    margin: 0 auto;
  }
  .fans-bundles-title{
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #shopify-section-{{ section.id }} .fans-bundles-title>p{
    font-size: 28px;
    line-height: 33px;
    font-weight:bold;
    color: {{ section.settings.title_color}};
  }
  .fans-bundles-title>span{
    padding-right:5px;
  }
  #shopify-section-{{ section.id }} .fans-bundle-desc{
    text-align:center;
    font-size: 18px;
    line-height: 21px;
    color: {{ section.settings.desc_color}};
    margin-top: 8px;
  }
  .fans-bundles{
    display:flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 18px;
  }
  .fans-bundles-item{
    width:49%;
    background-color:#fff;
    border-radius: 10px;
    padding: 15px 25px 15px 15px;
    margin-bottom:15px;
    display:flex;
  }
  .fans-bundles-item .img-first{
    width:316px;
  }
  .fans-bundles-item>a{
    min-width:316px;
    width:316px;
  }
  #shopify-section-{{ section.id }} .fans-sale-title>a{
    font-size: 20px;
    line-height: 23px;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    color:{{section.settings.product_title_color}};
  }
  #shopify-section-{{ section.id }} .fans-product-layout .button--full-width{
    border-radius: 8px;
    --border-offset: none;
    --border-opacity: none;
    background:{{section.settings.button_bg_color}}
  }
  .fans-bundles-item .fans-addcart-sale{
    position:absolute;
    bottom:0;
    width: 100%;
  }
  .fans-bundles-item .price-code{
    color: #6D3309;
  }
  .fans-bundles-item .short-desc{
    margin-top:10px;
  }
  .fans-bundles-item .short-desc>span{
    font-size: 16px;
    color: #6D3309;
    line-height: 19px;
    padding-left: 15px;
    position: relative;
    display:inline-block;
  }
  .fans-bundles-item .short-desc>span:before{
    content:'';
    position:absolute;
    width: 4px;
    height: 4px;
    background: #6D3309;
    border-radius: 100px;
    left: 0;
    top: 9px;
  }
  .fans-bundles-item .fn-compareat_price,.fans-bundles-item .price__regular .price-item--regular{
    flex-direction: row;
    color: #FF7500;
    font-size: 24px;
    font-weight: bold;
    line-height: 28px;
    align-items: baseline;
  }
  .fans-bundles-price{
    position: absolute;
    bottom: 50px;
  }
  .fans-bundles-price .fn-compareat_price .fn-compare-at_price{
    color: #FF7500;
    padding-left: 5px;
    font-weight:400;
  }
