      height: 38px;
      min-height: 38px;
      font-size: 14px;
    }
    .fans-bundles-item .fn-compareat_price, .fans-bundles-item .price__regular .price-item--regular {
      font-size: 16px;
      line-height: 19px;
    }
    .fans-bundles-item .short-desc>span{
      padding-left:8px;
    }
    .fans-bundles-item{
       margin-bottom:8px;
    }
  }
</style>
<div class="fans-hot-sale-bundles" id="{{ section.settings.id }}">
  <div class="fans-hot-sale-bundles-box">
    <div class="fans-bundles-title">
      {% if section.settings.title_icon != blank %}
       <span>
         <img src="{{ section.settings.title_icon | img_url}}">
       </span>
      {% endif %}
      <p>{{ section.settings.title }}</p>
    </div>
    {% if section.settings.desc != blank %}
    <div class="fans-bundle-desc">{{ section.settings.desc }}</div>
    {% endif %}
    <div class="fans-bundles">
       {% for block in section.blocks %}
        <div class="fans-bundles-item" style="{% if block.settings.bg_border_color != blank %}border:2px solid {{ block.settings.bg_border_color }};{% endif %}
          {% if block.settings.bg_color != blank %}background:{{ block.settings.bg_color }};{% endif %}">
            {%- if block.settings.product_item.featured_media -%}
              <a href="{{ block.settings.product_item.url }}">
                <img
                  class="img-first"
                  src="{{ block.settings.product_item.featured_media | img_url: '420x' }}"
                  alt="{{ block.settings.product_item.featured_media.alt | escape }}"
                  {% unless lazy_load == false %}
                    loading="lazy"
                  {% endunless %}
                >
              </a>
            {%- endif -%}
            <div class="fans-product-layout">
              <div class="fans-sale-title t">
                <a href="{{ block.settings.product_item.url }}" class="t">{{ block.settings.product_item.title | escape }}</a>
              </div>
              <div class="price-code">
                {% if block.settings.desc %}
                  <div class="short-desc">
                    {{ block.settings.desc }}
                  </div>
                {% endif %}
              </div>
              <div class="fans-bundles-price">
                {% render 'sffers-price', product: block.settings.product_item, price_class: '' %}
              </div>
               <div class="fans-addcart-sale">
                {% render 'easter-addCart', product: block.settings.product_item %}
              </div>
           </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  function copyticket(code){
    let url = code;
    let copyInput = document.createElement('input');
    	document.body.appendChild(copyInput);
    	copyInput.setAttribute('value', url);
    	copyInput.select();
    	document.execCommand("Copy");
    	copyInput.remove();
        alertMsg()
  }
   function alertMsg(){
    var alertFram = document.createElement("DIV");
    alertFram.id = "alertFram";
    alertFram.style.position = "fixed";
    alertFram.style.width = "100%";
    alertFram.style.textAlign = "center";
    alertFram.style.bottom = "40px";
    alertFram.style.zIndex = "10001";
    strHtml = " <span style=\"font-family: 微软雅黑;display:inline-block;background:#333;color:#fff;padding:0 20px;line-height:36px;border-radius:6px; \">Copied successfully</span>";
    alertFram.innerHTML = strHtml;
    document.body.appendChild(alertFram);
    setTimeout((function(){
      alertFram.style.display="none";
    }),2000);
  }
</script>
