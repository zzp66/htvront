<div class="craft-bags"  id="{{ section.settings.craft_id }}">
  <div class="craft-width">
  <div class="bag-product-title">
    <div class="bag-title-bg">
      <div class="bag-title-text">
        {{ section.settings.title }}
      </div>
    </div>
  </div>  
  <div class="bags-list">
    <div class="bags-topimg">
      {% for block in section.blocks %}
         <div class="bags-imgbox">
          <div class="bags-image">
              {% if block.settings.Bags_img != blank %}
                <img src="{{ block.settings.Bags_img | img_url: '790x' }}" alt="">
              {% endif %}
          </div>
        <div class="bags-text">
          <h3>
          {{ block.settings.bags_title }}
        </h3>
        <div class="ul-text">{{ block.settings.ul_text }}</div>
        <div class="bags_price">
          <b>Only</b>
            {% render 'sffers-price', product:  block.settings.product_item, price_class: '' %}
         </div>
          <div class="bags-addcart">
            {% render 'addCart-Model' ,product: block.settings.product_item, buttonText: 'ADD TO CART' %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
      <div> 
          <div class="bags-video">
            <div class="video-img">
              <a href="{{ section.settings.article_link }}" class="image_link">
                {% if section.settings.image != blank %}
                  <img class="show-in-pc" src="{{ section.settings.image | img_url: '790x' }}">
                {% endif %}
                {% if section.settings.image_mobile != blank %}
                  <img class="show-in-mobile" src="{{ section.settings.image_mobile | img_url: '351x' }}">
                {% endif %}
              </a>
              {% if section.settings.vedio_link != blank %}
                <img
                  onclick="christmasFunction('1','{{ section.settings.vedio_link }}')"
                  class="member-stories-player"
                  src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/img_v2_5b966ce4-5530-43c2-88f3-eab1a512b51g.png?v=1687849500"
                >
              {% endif %}
            </div>
            <div class="image-box">
                <i>{{ section.settings.sales_catchword }}</i>
                <img src="{{ section.settings.sales_img | img_url: '790x'}}">
            </div>
          </div>
      </div>
  </div>
  </div>
</div>
<div class="craft-video-mask">
  <div>
    <div class="carft-bags-main">
      <div class="mask-close" onclick="christmasFunction('2')">
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
      </div>
      <div class="craft-bags-Video">
        <iframe
          id="stories-Video-Iframe"
          width="100%"
          height="100%"
          src=""
          title="YouTube video player"
          frameborder="no"
          border="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>
<script>
  function christmasFunction(e,link){
    if(e == 1 ) {
      $('#stories-Video-Iframe').eq(0).attr('src',link)
      $('.craft-video-mask').show();

    }
    if(e == 2 ) {
      $('.craft-video-mask').hide();
      $('#stories-Video-Iframe').eq(0).attr('src','')
    }
  }
</script>
