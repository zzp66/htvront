<style>
  #shopify-section-fans-hot-sale-video {
    padding-bottom: 73px;
  }
  .fans-hot-sale-video {
    text-align: center;
    background-color: #fffaee;
    border-radius: 10px;
    width: 1506px;
    margin: 0 auto;
  }
  .video-content {
    padding: 20px 96px 40px;
  }
  .video-title {
    color: #7e3c00;
    font-weight: bold;
    font-size: 28px;
  }
  .video-second-title {
    color: #7e3c00;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 15px;
  }
  .fans-hot-sale-video .video-box {
    box-sizing: content-box;
    position: relative;
    max-width: 1307px;
    margin: 0 auto;
  }
  .video-box .bg-mask {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    opacity: 50%;
  }
  .video-box .btn-text {
    color: #7e3c00;
    font-weight: bold;
    font-size: 18px;
    margin-top: 7px;
  }
  .fans-hot-sale-video .video-box .video-btn {
    border-radius: 10px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
  }
  .fans-hot-sale-video .video-box .video-btn img {
    cursor: pointer;
  }
  @media screen and (max-width: 1660px) {
    .fans-hot-sale-video {
      width: 83.3% !important;
    }
  }
  @media screen and (max-width: 750px) {
    #shopify-section-fans-hot-sale-video {
      padding-bottom: 40px;
    }
    .fans-hot-sale-video {
      width: 93.6% !important;
    }
    .video-content {
      padding: 8px 12px 14px 8px;
    }
    .video-title {
      font-size: 18px;
    }
    .video-second-title {
      font-size: 14px;
    }
    .fans-hot-sale-video .video-box .video-btn img {
      width: 46px;
    }
    .video-box .btn-text {
      font-size: 14px;
    }
  }
</style>
<div class="fans-hot-sale-video hot-sale-style">
  <div class="video-content">
    <div class="video-title">{{ section.settings.title }}</div>
    <div class="video-second-title">{{ section.settings.second_title }}</div>
    <div class="video-box">
      <picture>
        <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'750x' }}">
        <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1313x' }}">
        <img src="{{ section.settings.image | img_url:'1426x' }}">
      </picture>
      <div class="bg-mask"></div>
      <div class="video-btn">
        <img
          onclick="christmasFunction('1','{{ section.settings.live_video }}')"
          src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/Group_388.png"
        >
        <p class="btn-text">Make A ‘Cooler’ Tumbler!</p>
      </div>
    </div>
  </div>
</div>
<div class="fn-Stories-mask">
  <div>
    <div class="fn-Storiesmask-main">
      <div class="mask-close" onclick="christmasFunction('2')">
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
      </div>
      <div class="fn-Stories-Video">
        <iframe
          id="stories-Video-Iframe"
          width="100%"
          height="100%"
          src=""
          title="YouTube video player"
          frameborder="no"
          border="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>
<script>
  function christmasFunction(e, link) {
    if (e == 1) {
      $('#stories-Video-Iframe').eq(0).attr('src', link);
      $('.fn-Stories-mask').show();
    }
    if (e == 2) {
      $('.fn-Stories-mask').hide();
      $('#stories-Video-Iframe').eq(0).attr('src', '');
    }
  }
</script>
{% schema %}
{
  "name": "Fans Hot Sale Video",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "Set Your Creativity Free!"
    },
    {
      "type": "text",
      "id": "second_title",
      "label": "小标题",
      "default": "Save up to XXX"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "PC端封面图"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "移动端封面图"
    },
    {
      "type": "url",
      "id": "live_video",
      "label": "Video Url"
    }
  ]
}
{% endschema %}
