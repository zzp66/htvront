<style>
  .fans-have-fun-video{
    padding:30px 20px 40px;
  }
  .fans-have-fun-video .text{
    font-weight: 600;
    font-size: 18px;
    color: #7E3C00;
    line-height: 21px;
    text-align: center;
    padding: 20px 78px;
  }
  .fans-have-fun-video .text>p:nth-child(1){
    margin-bottom:10px;
  }
 .fn-Stories-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    left: 0;
    top: 0;
    z-index: 999;
    display: none;
  }
  .fn-Stories-mask .fn-Storiesmask-main {
    cursor: pointer;
  }
  .fn-Stories-Video {
    width: 100%;
    height: 653px;
  }
  .fn-Stories-Video iframe {
    border-radius: 10px
  }
  .fn-Stories-mask > div {
    margin: 0 auto;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    position: absolute;
    background-color: #fff;
    border-radius: 16px;
    padding: 3.9% 6.2%;
    width: 74.85%;
  }
  .fn-Stories-mask .mask-close {
    position: absolute;
    top: 21px;
    right: 25px;
  }
  .fans-have-fun-video .video-box{
    position: relative;
  }
  .fans-have-fun-video .video-box .video-btn{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    cursor: pointer;
  }
 @media screen and (max-width: 1440px) {
   .fans-have-fun-video .text{
      padding: 20px 50px;
   }
 }
 @media screen and (max-width: 1180px) {
    .fn-Stories-Video {
        height: 400px;
    }
  }
 @media screen and (max-width: 820px) {
    .fn-Stories-Video {
        height: 300px;
    }
    .fn-Stories-mask .mask-close {
        top: 5px;
        right: 5px;
    }
  }
 @media screen and (max-width: 750px) {
    .fn-Stories-mask > div {
      width: 100%;
      border-radius: 0;
      padding: 5.1% 6.9%;
    }
    .fn-Stories-mask .mask-close {
      top: 3px;
      right: 4px;
    }
    .fn-Stories-mask .mask-close img {
      width: 19px;
      height: 19px
    }
    .fn-Stories-Video {
      height: 230px;
    }
    .fn-Stories-Video iframe {
      border-radius: 0
    }
  }
</style>
<div class="fans-have-fun-video have-fun-style">
  <div class="common-title">
    <div class="line-style">
      <span class="line-first"></span>
      <span class="line-second"></span>
      <span class="line-third"></span>
    </div>
    <p>{{ section.settings.title }}</p>
    <div class="line-style">
      <span class="line-third"></span>
      <span class="line-second"></span>
      <span class="line-first"></span>
    </div>
  </div>
  <div class="text">{{ section.settings.text }}</div>
  <div class="video-box">
    <picture>
        <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'350x' }}">
        <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1426x' }}">
        <img src="{{ section.settings.image | img_url:'1426x' }}">
    </picture>
    <img class="video-btn" onclick="christmasFunction('1','{{ section.settings.live_video }}')" src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/e6ea41caa8eabf7c36ef13dc76fb9fdb.png?v=1709794613"
    >
  </div>
</div>
<div class="fn-Stories-mask">
  <div>
      <div class="fn-Storiesmask-main">
          <div class="mask-close" onclick="christmasFunction('2')">
              <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
          </div>
          <div class="fn-Stories-Video">
              <iframe
                id="stories-Video-Iframe"
                width="100%"
                height="100%"
                src=""
                title="YouTube video player"
                frameborder="no"
                border="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
          </div>
      </div>
  </div>
</div>
<script>
  function christmasFunction(e, link) {
    if (e == 1) {
      $('#stories-Video-Iframe').eq(0).attr('src', link)
      $('.fn-Stories-mask').show();
    }
    if (e == 2) {
      $('.fn-Stories-mask').hide();
      $('#stories-Video-Iframe').eq(0).attr('src', '')
    }
  }
</script>
{% schema %}
  {
    "name": "Fans-have-fun-video",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"title"
      },{
        "type":"html",
        "id":"text",
        "label":"text"
      },{
        "type":"image_picker",
        "id":"image",
        "label":"image"
      },{
        "type":"image_picker",
        "id":"image_mobile",
        "label":"image mobile"
      },
      {
        "type": "url",
        "id": "live_video",
        "label": "video url"
      }
    ]
  }
{% endschema %}