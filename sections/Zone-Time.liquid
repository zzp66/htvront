<style>
  .Super-caption{
    letter-spacing: 0;
    position: relative;
    /* top: 84%; */
    left: 50%;
    transform: translateX(-50%);
    width:100%;
  }
  .cup-presell-time{
    background-position: center;
    margin-top:20px;
  }
  .cup-presell-time .countdown {
    position: relative;
  }
  .cup-presell-time .cup-presell-time-content{
    position: absolute;
    display: flex;
    left: 50%;
    top: 13%;
    transform: translateX(-50%);
    align-items: center;
    width: max-content;
    flex-direction: column;
  }
  .cup-presell-time .cup-presell-time-desc{
    font-weight: 600;
    font-size:28px;
    color: #FFF2B0;
    line-height: 33px;
    margin-bottom:15px;
  }
  .cup-presell-time .timer-count {
    display: flex;
    align-items: center
  }
  .cup-presell-time .format_span_time {
    overflow: hidden;
    font-size: 38px;
    color: #B51E00;
    line-height: 45px;
    position: absolute;
    top: 12%;
    left: 50%;
    transform: translateX(-50%);
  }
  .cup-presell-time .format_span_time .t{
    font-weight:600;
  }
  .cup-presell-time .timer-count > div {
    position: relative;   
  }
  .cup-presell-time .timer-text {
    font-size: 20px;
    color: #B51E00;
    line-height: 23px;
    position: absolute;
    bottom: 7%;
    left: 50%;
    transform: translateX(-50%);
  }
  .time-box{
    width: 94px;
    height: 94px;
    background: linear-gradient(180deg, #FFF7D9 0%, #FFEA9F 100%);
    box-shadow: inset 0px 3px 3px 0px rgba(102,37,0,0.64);
    border-radius: 10px;
    border: 2px solid;
    border-image: linear-gradient(180deg, rgba(255, 159, 15, 1), rgba(255, 214, 153, 1)) 2 2;
    text-align: center;
    clip-path: inset(0 round 14px);
    margin-right: 34px;
  }
  .time-box:nth-last-of-type(1){
    margin-right:0;
  }
 .cup-presell-time .dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #914408;
  }
  .cup-presell-time .timer-count p {
    margin-left: 14px;
    margin-right: 14px;
  }
  .cup-presell-time .timer-count p + p {
    margin-top: 10px;
  }
  .cup-presell-time .deal-timer-desc {
    font-size: 16px;
    color: #ff4042;
    line-height: 22px;
    text-align: center;
  }
  .cup-presell-time .countdown img {
    margin: 0 auto;
  }
  @media screen and (max-width: 1440px){
    .cup-presell-time .countdown{
      width:65%;
      margin:0 auto
    }
  }
  @media screen and (max-width: 1330px){
    .cup-presell-time .format_span_time{
      font-size:30px
    }
    .cup-presell-time .timer-text{
      font-size:16px
    }
    .cup-presell-time .cup-presell-time-desc{
      font-size:26px
    }
  }
  @media screen and (max-width: 1024px){
    .cup-presell-time .countdown{
      width:80%
    }
    .cup-presell-time .format_span_time{
      font-size:26px
    }
    .cup-presell-time .timer-text{
      font-size:14px
    }
    .cup-presell-time .cup-presell-time-desc{
      font-size:24px;
      margin-bottom:15px;
    }
    .cup-presell-time .timer-count p{
      margin-left: 12px;
      margin-right: 12px;
    }
  }
  @media screen and (max-width: 820px){
    .cup-presell-time .format_span_time{
      font-size:22px;
      padding-top: 3px;
      line-height: 26px;
    }
    .cup-presell-time .cup-presell-time-desc{
      font-size: 16px;
      margin-right: 0;
      line-height: 32px;
      margin-bottom: 5px;
    }
    .cup-presell-time .cup-presell-time-content{
      top: 13%;
    }
    .cup-presell-time .countdown{
      width:96%
    }
    .time-box {
      width: 63px;
      height: 63px;
      background: linear-gradient(180deg, #FFF7D9 0%, #FFEA9F 100%);
      box-shadow: inset 0px 3px 3px 0px rgba(102,37,0,0.64);
      border-radius: 10px 10px 10px 10px;
      opacity: 1;
      border: 2px solid;
      border-image: linear-gradient(180deg, rgba(255, 159, 15, 1), rgba(255, 214, 153, 1)) 2 2;
      clip-path: inset(0 round 11px);
      margin-right:22px;
    }
    .cup-presell-time .timer-text{
      bottom:0;
    }
  }
</style>

{% if section.settings.desc_text != blank %}
<div class="cup-presell-time" id="{{ section.settings.id }}">
    <div class="deal-timer-countdown">
    <div class="countdown">
      <picture>
        <source media="(max-width: 820px)" srcset="{{ section.settings.image_mobile | img_url:'360x' }}" />
        <source media="(min-width: 821px)" srcset="{{ section.settings.image | img_url:'540x' }}">
        <img src="{{ section.settings.image | img_url:'540x' }}"/>
      </picture>
      <div class="cup-presell-time-content">
        <div class="cup-presell-time-desc">{{ section.settings.desc_text }}</div>
        <div class="timer-count">
        <div class="time-box">
          <div class="format_span_time">
            <div>
              <span id='hour' class="hour format_span t">23</span>
            </div>       
          </div>
          <span class="timer-text">Hours</span>
        </div>
        <div class="time-box">
          <div class="format_span_time">
            <div>
            <span id='minute' class="minute format_span t">59</span>
            </div>
          </div>
          <span class="timer-text">Mins</span>
        </div>
        <div class="time-box">
          <div class="format_span_time">
            <div>
            <span id='second' class="second format_span t">59</span>
            </div>
           </div>
          <span class="timer-text">Secs</span>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
<script>
  var hour = $("#hour")[0];
  var minute = $("#minute")[0];
  var second = $("#second")[0];
    //倒计时
    !(function () {
        var oldtime = new Date(); //传入的时间
        oldtime = oldtime.setDate(oldtime.getDate() + 1);//模拟24小时后的时间
        //时间换算
        function timer (oldtime) {
            var newtime = new Date();
            var time = (oldtime - newtime) / 1000;
            var h = parseInt(time / 60 / 60 % 24);
            var m = parseInt(time / 60 % 60);
            var s = parseInt(time % 60);
            return h + "," + m + "," + s + ",";
        }
        setInterval(function () { 
          var arr = timer(oldtime).split(",");
          hour.innerHTML = arr[0] < 10 ? "0" + arr[0] : arr[0] ;
          minute.innerHTML = arr[1] < 10 ? "0" + arr[1] : arr[1];
          second.innerHTML = arr[2] < 10 ? "0" + arr[2] : arr[2];
        }, 1000)
    })()
</script>
