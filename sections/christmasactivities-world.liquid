  {
    "name": "christmas world",
    "settings": [
          {
             "type":"image_picker",
             "id":"Products_world",
             "label":{
             "en":"Products background image",
             "zh-CN":"产品背景图片"
           }
         },
        {
             "type":"image_picker",
             "id":"world_imges",
             "label":{
             "en":"Products image",
             "zh-CN":"产品图片"
           }
         },
         {
           "type":"html",
           "id":"world_content_a",
           "label":{
           "en":"Products content",
           "zh-CN":"内容"
         }
       }, 
       {
          "type": "product",
          "id": "world_product",
          "label": "product"
         },
       {
          "type": "text",
          "id": "sum_world",
          "label": "sum"
       },
        {
             "type":"image_picker",
             "id":"mobile_world_backdrop",
             "label":{
             "en":"backdrop image",
             "zh-CN":"手机背景图片"
           }
         },
         {
             "type":"image_picker",
             "id":"world_Products_img",
             "label":{
             "en":"Product image",
             "zh-CN":"产品图片"
           }
         },
         {
             "type":"image_picker",
             "id":"world_explain_img",
             "label":{
             "en":"explain image",
             "zh-CN":"图片"
           }
         },
              {
            "type":"url",
            "id":"world_Products_link",
