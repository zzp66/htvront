  "max_blocks":4,
  "settings": [
    {
          "type":"text",
          "id":"title",
          "label":"title"
    }
  ],
  "blocks":[
    {
      "type":"brand",
      "name":{
        "en":"image",
        "zh-CN":"image"
        },
      "settings":[
          {
          "type":"image_picker",
          "id":"image",
          "label":{
            "en":"Image",
            "zh-CN":"图片"
            }
          },
        {
          "type":"text",
          "id":"title",
          "label":"title"
        },
        {
          "type":"text",
          "id":"link",
          "label":"link"
        }
      ]
    }
  ],
  "presets":[{
    "name":"Cup-Creativity",
    "blocks":[
        {
        "type":"brand"
        }
      ]
  }]
}
{% endschema %}

