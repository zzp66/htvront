<style>
  .cup-creativity{
    background: #DFCBB9;
    padding:50px 0 60px 0;
    letter-spacing: 0;
  }
  .cup-creativity-title{
    font-size: 36px;
    font-weight: bold;
    color: #333333;
    line-height: 49px;
    text-align: center;
    margin-bottom: 30px;
  }
  .cup-creativity-content{
    width: 1600px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
  }
  .cup-creativity-header{
    display:flex;
    background: #FFF6EB;
    border-radius: 0px 0px 8px 8px;
    padding:16px 25px 16px 27px;
    align-items: center;
    justify-content: space-between;
  }
  .cup-creativity-header>div{
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    line-height: 27px;
  }
  .cup-creativity-header>img{
    width:48px;
    cursor: pointer;
  }
   .fn-Stories-mask {
      position: fixed;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      left: 0;
      top: 0;
      z-index: 999;
      display: none;
    }
    .fn-Stories-mask .fn-Storiesmask-main {
      cursor: pointer;
    }
    .fn-Stories-Video {
      width:100%;
      height:653px;
    }
    .fn-Stories-Video iframe{
      border-radius:10px
    }
    .fn-Stories-mask>div{
      margin: 0 auto;
      transform: translate(-50%, -50%);
      top: 50%;
      left: 50%;
      position: absolute;
      background-color: #fff;
      border-radius: 16px;
      padding: 3.9% 6.2%;
      width: 74.85%;
    }
    .fn-Stories-mask .mask-close {
      position: absolute;
      top: 21px;
      right: 25px;
    }
  @media screen and (max-width: 1720px){
    .cup-creativity-content{
      width:83.33%
    }
    .cup-creativity-item{
      width:49.5%
    }
  }
  @media screen and (max-width: 1180px){
    .cup-creativity-title{
      font-size:32px
    }
    .alert-video{
      padding:20px 12px
    }
    .fn-Stories-Video {
          height:400px;
        }
    }
  @media screen and (max-width: 820px){
    .fn-Stories-Video {
        height:300px;
      }
    .fn-Stories-mask .mask-close {
        top: 5px;
        right: 5px;
      }
  }
  @media screen and (max-width: 750px){
     .cup-creativity{
       padding:20px 0
     }
    .cup-creativity-title{
      font-size:16px;
      margin-bottom:10px;
      line-height:22px
    }
    .cup-creativity-content{
      width:93.6%;
      display:block
    }
    .cup-creativity-item{
      width:100%;
      margin-bottom:10px
    }
    .cup-creativity-header{
      padding:8px 12px 8px 14px;
      border-radius: 0px 0px 2px 2px;
    }
    .cup-creativity-header>div{
      font-size: 14px;
      line-height: 19px;
    }
    .cup-creativity-header>img{
      width:24px
    }
    .fn-Stories-mask>div{
      width:100%;
      border-radius: 0;
      padding: 5.1% 6.9%;
    }
    .fn-Stories-mask-mobile>div{
      width:93.6%;
    }
     .fn-Stories-mask .mask-close {
        top: 3px;
        right: 4px;
      }
    .fn-Stories-mask .mask-close img{
      width:19px;
      height:19px
    }
    .fn-Stories-Video {
        height:230px;
      }
    .fn-Stories-Video iframe{
      border-radius:0
    }
  }
</style>
<div class="cup-creativity">
  <div class="cup-creativity-title">
    {{ section.settings.title }}
  </div>
  <div class="cup-creativity-content">
    {% for block in section.blocks %}
      <div class="cup-creativity-item">
        <img src="{{ block.settings.image | img_url:'790x' }}">
        <div class="cup-creativity-header">
          <div>{{ block.settings.title }}</div>
          <img
            onclick="christmasFunction('1','{{ block.settings.link }}')"
            src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/2x_ebf77e25-9bc1-4996-b413-62f56bb1df86.png?v=1688959194"
          >
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<div class="fn-Stories-mask">
  <div>
    <div class="fn-Storiesmask-main">
      <div class="mask-close" onclick="christmasFunction('2')">
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
      </div>
      <div class="fn-Stories-Video">
        <iframe
          id="Cup-Video-Iframe"
          width="100%"
          height="100%"
          src=""
          title="YouTube video player"
          frameborder="no"
          border="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>
<script>
  function christmasFunction(e,link){
    if(e == 1 ) {
      $('#Cup-Video-Iframe').eq(0).attr('src',link)
      $('.fn-Stories-mask').show();
    }
    if(e == 2 ) {
      $('.fn-Stories-mask').hide();
      $('#Cup-Video-Iframe').eq(0).attr('src','')
    }
  }
</script>
