<style>
  .alert-video{
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-size: 100% 100%;
    background-position: center;
    padding-top: 15px;
  }
  .alert-video .video-default{
    position: relative;
  }
  .alert-video .video-poster{
    margin: 0 auto;
  }
  .alert-video .video-btn{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 102px;
    cursor: pointer;
  }
   .fn-Stories-mask {
      position: fixed;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      left: 0;
      top: 0;
      z-index: 999;
      display: none;
    }
    .fn-Stories-mask .fn-Storiesmask-main {
      cursor: pointer;
    }
    .fn-Stories-Video {
      width:100%;
      height:653px;
    }
    .fn-Stories-Video iframe{
      border-radius:10px
    }
    .fn-Stories-mask>div{
      margin: 0 auto;
      transform: translate(-50%, -50%);
      top: 50%;
      left: 50%;
      position: absolute;
      background-color: #fff;
      border-radius: 16px;
      padding: 3.9% 6.2%;
      width: 74.85%;
    }
    .fn-Stories-mask .mask-close {
      position: absolute;
      top: 21px;
      right: 25px;
    }
  .alert-video-box{
    width: 1600px;
    margin: 0 auto;
    background: #ffffff;
    box-shadow: 0 6px 14px #4822034d;
    border-radius: 10px 10px 0 0;
    padding:50px 30px 35px 30px;
  }
  .alert-video .video-default{
    padding: 0 146px;
  }
  .fn-video-title{
    margin-bottom: 30px;
  }
  @media screen and (max-width: 1720px){
    .alert-video .video-poster{
      width:83.33%
    }
    .alert-video-box{
       width:83.33%
    }
  }
  @media screen and (max-width: 1180px){
    .fn-Stories-Video {
      height:400px;
    }
    .alert-video-box{
      width:93.6%;
      box-shadow: 0px 5px 10px 0px rgba(72,34,3,0.3);
      border-radius: 6px 6px 0 0;
    }
    .alert-video {
      padding:0;
    }
    .alert-video .video-poster{
      width:100%;
    }
    .fn-video-title{
      font-size:32px;
    }
    .alert-video .video-default{
      padding: 0;
    }
  }
  @media screen and (max-width: 820px){
    .fn-Stories-Video {
        height:300px;
      }
    .fn-Stories-mask .mask-close {
        top: 5px;
        right: 5px;
      }
   .alert-video  .video-btn{
      width:50px
    }
  }
  @media screen and (max-width: 750px){
    .alert-video-box{
      padding: 23px 10px 12px;
    }
    .fn-video-title {
      font-size: 16px;
      margin-bottom: 10px;
      line-height:16px;
    }
    .alert-video{
     background-image:url('{{ section.settings.background_image_mobile | img_url:'750x' }}');
     background-size: 100% 100%;
     background-position: center;
    }
    .alert-video .video-poster{
      width:100%
    }
    .fn-Stories-mask>div{
      width:100%;
      border-radius: 0;
      padding: 5.1% 6.9%;
    }
    .fn-Stories-mask-mobile>div{
      width:93.6%;
    }
     .fn-Stories-mask .mask-close {
        top: 3px;
        right: 4px;
      }
    .fn-Stories-mask .mask-close img{
      width:19px;
      height:19px
    }
    .fn-Stories-Video {
        height:230px;
      }
    .fn-Stories-Video iframe{
      border-radius:0
    }
  }
</style>
<div class="alert-video">
  <div class="alert-video-box">
    {% if section.settings.title != blank %}
    <div class="fn-video-title">
      {{ section.settings.title }}
    </div>
    {% endif %}
    <div class="video-default">
      <img class="video-poster" src="{{ section.settings.video_poster | img_url:'1600x' }}">
      <img
        class="video-btn"
        onclick="christmasFunction('1','{{ section.settings.live_video }}')"
        src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/8_2x_44e387d9-34c7-4062-a476-c92df26c10ce.png?v=1688953496"
      >
    </div>
  </div>
</div>
<div class="fn-Stories-mask">
  <div>
    <div class="fn-Storiesmask-main">
      <div class="mask-close" onclick="christmasFunction('2')">
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/7_8ba31ff8-9cdf-403b-ac36-d36b25abab80.png?v=1683355188">
      </div>
      <div class="fn-Stories-Video">
        <iframe
          id="stories-Video-Iframe"
          width="100%"
          height="100%"
          src=""
          title="YouTube video player"
          frameborder="no"
          border="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>
<script>
  function christmasFunction(e,link){
    if(e == 1 ) {
      $('#stories-Video-Iframe').eq(0).attr('src',link)
      $('.fn-Stories-mask').show();
    }
    if(e == 2 ) {
      $('.fn-Stories-mask').hide();
      $('#stories-Video-Iframe').eq(0).attr('src','')
    }
  }
</script>
