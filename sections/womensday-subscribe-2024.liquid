<style>
  #shopify-section-{{ section.id }} .womens-day-subscribe{
    position:relative;
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    {% if section.settings.background_color != blank %}
        background:{{section.settings.background_color}};
    {% endif %}
    padding-bottom: 60px;
  }
  .subscribe-big-box{
    background: #FFF5FE;
    border-radius: 188px;
    padding: 60px 85px 60px 45px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position:relative;
  }
  .subscribe-big-box>img{
    position:absolute;
    bottom:0;
    left:0;
  }
  .subscribe-title{
    font-size: 36px;
    font-weight: bold;
    color: #883F97;
    line-height: 42px;
    width: 498px;
  }
  .subscribe-rules{
    font-size: 20px;
    font-weight: 600;
    color: #8D429C;
    line-height: 23px;
    margin:50px 0 20px;
    display: block;
  }
  .subscribe-rules>span{
    display:block;
    font-size: 18px;
    font-weight: 400;
    color: #8D429C;
    line-height: 21px;
    padding-bottom: 7px;
  }
  .subscribe-rules>strong{
    margin-bottom:20px;
    display:block;
  }
  .subscribe-form .newsletter-form{
    max-width:100%;
  }
  .subscribe-form .newsletter-form__field-wrapper{
    max-width:100%;
  }
  .subscribe-form .newsletter-form__field-wrapper>div{
    display:flex;
  }
  .subscribe-form .home-emailButton{
    width: 226px;
    height: 50px;
    background: linear-gradient(180deg, #F769A5 0%, #EC5CBB 0%, #EE88CB 0%, #C545B0 94%);
    border-radius: 4px;
    border: none;
    color: #fff;
    font-size: 16px;
    margin-left: 20px;
  }
  .subscribe-form .home-emailInput{
    width: calc(100% - 246px);
  }
  .subscribe-form .newsletter-form__field-wrapper .field__input{
    height: 50px;
    background: #FFFFFF;
    box-shadow: 0px 4px 6px 0px rgba(128,87,118,0.13);
    border-radius: 4px 4px 4px 4px;
  }
  .subscribe-form .newsletter-form__field-wrapper .field__input::placeholder{
    color: #C5A0CD;
  }
  .subscribe-box{
    margin-right:60px;
    position: relative;
    z-index: 2;
  }
   @media screen and (max-width: 1660px){
     .subscribe-box{
       margin-right:40px;
     }
   }
  @media screen and (max-width: 1440px){
    .subscribe-title{
      line-height: 33px;
      font-size: 30px;
      width: 100%;
    }
    .subscribe-box,.subscribe-big-box>picture{
      flex:1;
    }
    .subscribe-form .home-emailButton {
      width: 150px;
    }
    .subscribe-form .home-emailInput {
      width: calc(100% - 170px);
    }
    .subscribe-rules{
      margin: 30px 0 20px;
    }
  }
  @media screen and (max-width: 1024px){
    .subscribe-big-box{
      flex-direction: column;
    }
    .subscribe-box{
      margin-right: 0;
      margin-bottom:40px;
    }
    .subscribe-big-box>img{
      display:none;
    }
  }
  @media screen and (max-width: 820px){
    .subscribe-big-box{
      border-radius: 60px;
    }
  }
  @media screen and (max-width: 750px){
    .subscribe-title{
      font-size: 16px;
      line-height: 19px;
      text-align: center;
    }
    .subscribe-rules>strong{
      font-size:14px;
      margin-bottom: 8px;
    }
    .subscribe-rules {
      margin: 12px 0;
    }
    .subscribe-rules>span{
      font-size: 14px;
      line-height: 18px;
    }
    .subscribe-form .home-emailButton {
      width: 127px;
      height: 40px;
      font-size: 14px;
      margin-left: 8px;
    }
    .subscribe-form .newsletter-form__field-wrapper .field__input {
      height: 40px;
    }
    .subscribe-form .field__label{
      font-size:14px;
    }
    .subscribe-form .home-emailInput {
      width: calc(100% - 135px);
    }
    .subscribe-box{
      margin-bottom:24px;
    }
  }
   @media screen and (max-width: 480px){
      #shopify-section-{{ section.id }} .womens-day-subscribe{
        padding-bottom: 30px;
        background: #FEE8F9;
      }
     .subscribe-big-box{
       padding: 24px 6px 36px;
     }
     .subscribe-title{
       padding:0 50px;
     }
   }
</style>
<div class="womens-day-subscribe">
  <div class="womensday-width">
    <div class="subscribe-big-box">
      <div class="subscribe-box">
         <div class="subscribe-title">
            {{ section.settings.title }}
          </div>
         <div class="subscribe-rules">
            {{ section.settings.rules }}
          </div>
         <div class="subscribe-form">
            {% form 'customer', class: 'newsletter-form' %}
              <input type="hidden" name="contact[tags]" value="Women_Day">
              <div class="newsletter-form__field-wrapper">
                 <div>
                    <div class="home-emailInput">
                      <input
                        id="NewsletterForm--{{ section.id }}"
                        type="email"
                        name="contact[email]"
                        class="field__input"
                        value="{{ form.email }}"
                        aria-required="true"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="Newsletter-error--{{ section.id }}"
                        {% elsif form.posted_successfully? %}
                          aria-describedby="Newsletter-success--{{ section.id }}"
                        {% endif %}
                        placeholder="Enter your email "
                        required
                      >
                      <label class="field__label" for="NewsletterForm--{{ section.id }}">Enter your email </label>
                    </div>
                    <div>
                      <button
                        type="submit"
                        class="home-emailButton t"
                        name="commit"
                        id="Subscribe"
                        aria-label="{{ 'newsletter.button_label' | t }}"
                      >
                        <!-- {% render 'icon-arrow' %} -->
                        Subscribe
                      </button>
                    </div>
                 </div>
                {%- if form.errors -%}
                  <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                    {%- render 'icon-error' -%}
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="Newsletter-success--{{ section.id }}"
                  tabindex="-1"
                  autofocus
                >
                  {% render 'icon-success' -%}
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {% endform %}
          </div>
      </div>
      <picture>
        <source media="(max-width: 1024px)" srcset="{{ section.settings.image_mobile | img_url:'623x' }}">
        <source media="(min-width: 1025px)" srcset="{{ section.settings.image | img_url:'730x' }}">
        <img src="{{ section.settings.image | img_url:'730x' }}">
      </picture>
       <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/Frame_29.png?v=1707122524">
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Womens-Day-Subscribe",
    "settings": [{
      "type":"text",
      "id":"id",
      "label":"id(页面唯一性，全英文)"
    },{
      "type":"color",
      "id":"background_color",
      "label":"background color(PC)"
    },{
      "type":"color",
      "id":"background_color_mobile",
      "label":"background color(mobile)"
    },{
      "type":"image_picker",
      "id":"background_image",
      "label":"background image"
    },{
      "type":"text",
      "id":"title",
      "label":"title"
    },{
      "type":"html",
      "id":"rules",
      "label":"rules"
    },{
      "type":"image_picker",
      "id":"image",
      "label":"image"
    },{
      "type":"image_picker",
      "id":"image_mobile",
      "label":"image mobile"
    }],
    "presets":[
        {
          "name":"Womens-Day-Subscribe"
        }
    ]
  }
{% endschema %}