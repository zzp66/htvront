        .campaign-big-sale .campaign-text {
            top: 40px;
        }
    }
      @media (min-width: 992px){
        #shopify-section-{{ section.id }} .campaign-big-sale .swiper-button-prev,
        #shopify-section-{{ section.id }} .campaign-big-sale .swiper-button-next {
          background-color: {{ section.settings.bg_color }};
        }
    }
    @media (max-width: 991px){
        .campaign-big-sale .campaign-text {
            left: 15px;
        }
    }
    @media (max-width: 749px){
        .campaign-big-sale .campaign-img .pc {
            display: none;
        }
        .campaign-big-sale .campaign-img .phone {
            display: block;
        }
        .campaign-big-sale .campaign-text {
            top: 60px;
        }
        .campaign-big-sale .campaign-text .t {
            font-size: 40px;
            line-height: 44px;
        }
        .campaign-big-sale .campaign-text .desc {
            margin-top: 16px;
            font-size: 24px;
            line-height: 28px;
        }
        .campaign-big-sale .campaign-text .time {
            margin-top: 8px;
            font-size: 24px;
            line-height: 28px;
        }
        .campaign-big-sale .more a {
            padding: 14px 40px;
        }
        .campaign-big-sale .more {
            margin-top: 20px;
        }
        .campaign-big-sale .campaign-product .swiper-container {
            padding: 30px 30px 20px 30px;
        }
        .campaign-big-sale {
            padding-top: 8px;
        }
    }
    @media (max-width: 480px){
      #shopify-section-template--14236092760197__1652929333d5a60201 .campaign-big-sale {
          padding-bottom: 30px;
      }
        .campaign-big-sale .campaign-text {
            top: 30px;
        }
        .campaign-big-sale .campaign-text .t {
            font-size: 20px;
            line-height: 24px;
        }
        .campaign-big-sale .campaign-text .desc {
            margin-top: 8px;
            font-size: 12px;
            line-height: 16px;
        }
        .campaign-big-sale .campaign-text .time {
            margin-top: 4px;
            font-size: 12px;
            line-height: 16px;
        }
        .campaign-big-sale .more {
            margin-top: 10px;
            padding: 0;
        }
        .campaign-big-sale .more a {
            padding: 7px 20px;
            font-size: 12px;
        }
        .campaign-big-sale .campaign-product .swiper-container {
            padding: 30px 0;
        }
        .campaign-big-sale .swiper-button-prev, .campaign-big-sale .swiper-button-next {
            background-color: transparent;
        }
/*         .campaign-big-sale .campaign-product {
            padding: 0 15px;
        } */
        .campaign-product .swiper-slide {
            box-shadow: none;
        }
        .campaign-big-sale .campaign-product .fn-size-attr {
            margin-bottom: 20px;
        }
        .campaign-big-sale {
            padding-bottom: 30px;
            padding-top: 4px;
        }
    }
</style>
<div class="fn-breadcrumb">
    <div class="fn-page-width">
        <ul>
            <li><a href="/">Home</a></li>
            <li> > </li>
            <li>Campaign</li>
        </ul>
    </div>
</div>
<div class="campaign-big-sale">
    <div class="{{ section.settings.layout }} fn-relative">
        {%- if section.settings.bg_image != blank -%}
        <div class="campaign-img">
            <img class="pc" src="{{ section.settings.bg_image | img_url: '1920x' }}" alt="{{ section.settings.bg_image.alt }}">
            <img class="phone" src="{{ section.settings.phone_bg_image | img_url: '750x' }}" alt="{{ section.settings.phone_bg_image.alt }}">
        </div>
        {%- endif -%}
        <div class="campaign-text">
            {%- if section.settings.title != blank -%}
            <div class="t">{{ section.settings.title }}</div>
            {%- endif -%}
            {%- if section.settings.desc != blank -%}
            <div class="desc">{{ section.settings.desc }}</div>
            {%- endif -%}
            {%- if section.settings.time != blank -%}
            <div class="time">{{ section.settings.time }}</div>
            {%- endif -%}
            {%- if section.settings.link != blank -%}
            <div class="more extra-t"><a href="{{ section.settings.link }}">{{ section.settings.label }}</a></div>
            {%- endif -%}
        </div>
    </div>
    <div class="campaign-product">
        {% for block in section.blocks %}
        <div class="{{ section.settings.layout }} swiper-container">
            <div class="swiper-wrapper">
                {%- for product in block.settings.collection.products limit: section.settings.products_to_show -%}
                <div class="swiper-slide item">
                    {% render 'fn-card-product',
                    card_product: product,
                    show_secondary_image: section.settings.show_secondary_image
                    %}
                </div>
                {%- endfor -%}
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
        {%- endfor -%}
        {%- if section.settings.activity_link != blank -%}
        <div class="more"><a href="{{ section.settings.activity_link }}">{{ section.settings.activity_label }}</a></div>
        {%- endif -%}
    </div>
</div>
<script>
    $(function(){
        var recommendSwiper = new Swiper('.campaign-product .swiper-container', {
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            slidesPerView: 4,
            slidesPerGroup: 4,
            spaceBetween: 20,
            breakpoints:{
                750:{
                    slidesPerView: 2,
                    slidesPerGroup: 2,
                    spaceBetween: 10
                },
                1200:{
                    slidesPerView: 3,
                    slidesPerGroup: 3,
                    spaceBetween: 20
                }
            }
        });

    });
</script>

