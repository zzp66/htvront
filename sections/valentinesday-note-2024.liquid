                onkeydown="this.value = this.value.substring(0, 100);TextareaFontLength('Remark')"
                onkeyup="this.value = this.value.substring(0, 100);TextareaFontLength('Remark')"
                placeholder="Please Enter 100 characters or less"
      ></textarea>
            <div>
                <span id="span_Font_Length" style="font-size: 14px;">0</span>
                <span style="font-size: 14px;">/</span>
                <span style="font-size: 14px;">100</span>
            </div>
        </div>
        <div class="tag-submit">
            <div class="tag-submit-btn" id="tag_submit">
                <span>Post</span>
            </div>
            <div class="tag-submit-btn" id="tag_loading" style="display:none">
                <div class="loading-svg">
                    <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                </div>
