{%- style -%}
#shopify-section-{{ section.id }} .member-how-it-works {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
{%- endstyle -%}
<div class="member-how-it-works">
    <div class="fn-page-width-s">
        {%- if section.settings.title != blank -%}
        <div class="t">{{ section.settings.title }}</div>
        {%- endif -%}
        <div class="fn-flex">
            {% for block in section.blocks %}
            <div class="item">
                {%- if block.settings.image != blank -%}
                <div class="img"><img src="{{ block.settings.image | img_url: '385x' }}" alt="{{ block.settings.image.alt }}"><span>{{ forloop.index }}</span></div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                <div class="extra-t">{{ block.settings.title }}</div>
                {%- endif -%}
                {%- if block.settings.desc != blank -%}
                <div class="desc">{{ block.settings.desc }}</div>
                {%- endif -%}
            </div>
            {%- endfor -%}
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Member How it works",
    "max_blocks": 3,
    "settings":[
        {
            "type":"text",
            "id":"title",
            "default":"HOW IT WORKS",
            "label":"标题"
        },
        {
            "type":"color",
            "id":"bg_color",
            "label":"背景颜色"
        },
        {
            "type":"range",
            "id":"padding_top",
            "min":0,
            "max": 200,
            "step":4,
            "unit":"px",
            "label":"t:sections.all.padding.padding_top",
            "default": 100
        },
        {
            "type":"range",
            "id":"padding_bottom",
            "min":0,
            "max": 200,
            "step":4,
            "unit":"px",
            "label":"t:sections.all.padding.padding_bottom",
            "default": 100
        }
    ],
    "blocks":[
        {
            "type":"image",
            "name":"image",
            "settings":[
                {
                    "type":"text",
                    "id":"title",
                    "default": "SIGN UP",
                    "label":"标题"
                },
                {
                    "type":"text",
                    "id":"desc",
                    "default": "Create an account and get 1000 points.",
                    "label":"描述"
                },
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"图片"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Member How it works",
            "blocks":[
                {
                    "type":"image"
                },
                {
                    "type":"image"
                },
                {
                    "type":"image"
                }
            ]
        }
    ]
  }
{% endschema %}
