{%- style -%}
#shopify-section-{{ section.id }} .member-faq {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
@media (max-width: 480px) {
#shopify-section-member-faq .member-faq {
    padding: 30px 0;
}
}
{%- endstyle -%}
<div class="member-faq">
    <div class="fn-page-width">
        {%- if section.settings.title != blank -%}
        <div class="t">{{ section.settings.title }}</div>
        {%- endif -%}
        <div class="fn-row">
            {% for block in section.blocks %}
            <div class="item">
                {%- if block.settings.title != blank -%}
                <div class="extra-t{% if forloop.index0 == 0 %} active{% endif %}">{{ block.settings.title }} <span><img src="https://cdn.shopifycdn.net/s/files/1/0356/5997/2741/files/lQLPJxZUM5n3JRcOCLD_tDap5Hgy7wKLBau2wPgA_8_14.png?v=1653119790"></span></div>
                {%- endif -%}
                {%- if block.settings.desc != blank -%}
                <div class="desc"{% if forloop.index0 == 0 %} style="display: block;"{% endif %}>{{ block.settings.desc }}</div>
                {%- endif -%}
            </div>
            {%- endfor -%}
        </div>
        {%- if section.settings.link != blank -%}
        <div class="more"><a href="{{ section.settings.link }}">{{ section.settings.label }}</a></div>
        {%- endif -%}
    </div>
</div>
<script>
  $(function(){
      $('.member-faq .fn-row .extra-t').click(function () {
          $(this).toggleClass('active');
          $(this).siblings().slideToggle(300);
      });
  });
</script>
{% schema %}
  {
    "name": "Member FAQ",
    "max_blocks": 16,
    "settings":[
        {
            "type":"text",
            "id":"title",
            "default":"FREQUENTLY ASKED QUESTIONS",
            "label":"标题"
        },
        {
            "type":"color",
            "id":"bg_color",
            "label":"背景颜色"
        },
        {
            "type":"text",
            "id":"label",
            "default":"See More",
            "label":"链接文字"
        },
        {
            "type":"url",
            "id":"link",
            "label":"链接"
        },
        {
            "type":"range",
            "id":"padding_top",
            "min":0,
            "max": 200,
            "step":4,
            "unit":"px",
            "label":"Top padding",
            "default": 100
        },
        {
            "type":"range",
            "id":"padding_bottom",
            "min":0,
            "max": 200,
            "step":4,
            "unit":"px",
            "label":"Bottom padding",
            "default": 100
        }
    ],
    "blocks":[
        {
            "type":"text",
            "name":"text",
            "settings":[
                {
                    "type":"text",
                    "id":"title",
                    "label":"标题"
                },
                {
                    "type":"html",
                    "id":"desc",
                    "label":"描述"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Member FAQ",
            "blocks":[
                {
                    "type":"text"
                }
            ]
        }
    ]
  }
{% endschema %}
