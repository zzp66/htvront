<style>
    .zone-product{
      background: #FFF6D6;
      box-shadow: 0px 6px 14px 0px rgba(95,4,4,0.25);
      border-radius: 20px;
      padding:24px 18px 30px;
      letter-spacing: 0;
      margin-top: 40px;
    }
    .zone-product-title{
      font-size: 32px;
      font-weight: bold;
      color: #C63D39;
      line-height: 38px;
      text-align:center;
      margin-bottom:15px;
    }
    .zone-product-content{
      display: flex;
      justify-content: flex-start;
      flex-wrap: wrap;
    }
    .zone-product-items{
       width: 24%;
      background: #ffffff;
      border-radius: 8px;
      padding: 11px 12px 15px 13px;
      margin-bottom: 20px;
      margin-right: 1.3%;
    }
    .zone-product-items:nth-child(4n) {
      margin-right: 0;
    }
    .zone-product-items .fn-product-title .t {
      font-size: 16px;
      line-height: 22px;
      height: 42px;
      color: #000;
    }
    .zone-product-items .fn-color-attr {
      height: 32px;
      margin-top: 15px;
    }
    .zone-product-items .fn-color-attr ul li {
      width: 30px;
      height: 30px;
      border: 0px;
    }
    .zone-product-items .fn-color-attr ul li + li {
      margin-left: 10px;
      color: #000;
    }
    .zone-product-items .fn-color-attr ul li:hover {
      border: 1px solid #ff3737;
    }
    .zone-product-items .button--full-width {
      height: 46px;
      background: linear-gradient(91deg, #FE4E43 0%, #FF7B36 100%);
      border-radius: 4px;
      min-height: 46px;
      margin-top: 15px;
      --border-opacity: none;
      --border-offset: none;
      padding-left: 0;
      padding-right: 0;
    }
    .zone-product-items .fn-product-price {
      width: auto;
    }
    .zone-product-items .fn-product-price span {
      font-size: 24px;
      line-height: 24px;
      text-align: right;
    }
    .zone-product-items .fn-compareat_price .fn-compare-at_price {
      font-size: 16px;
      font-weight: 400;
      text-align: right;
      color: #333;
    }
   .zone-product .title_desc>span{
     font-size: 16px;
     font-weight: 400;
     color: #C63D39;
     line-height: 19px;
   }
   .zone-product .title_desc{
   }
   .zone-product .title_desc .code{
     font-size: 16px;
     font-weight:bold;
   }
   .zone-product .code-img{
     height:14px;
     cursor: pointer;
    display: inline-block;
   }
   .learn-more{
    font-size: 18px;
    font-weight: bold;
    color: #FF6301 !important;
    line-height: 21px;
    text-align: center;
   }
   @media screen and (max-width: 1720px){
     .zone-product-title{
       font-size:28px;
     }
     .zone-product .title_desc{
       font-size:20px;
     }
   }
    @media screen and (max-width: 1024px){
       .zone-product{
          padding:20px 0 30px 0;
        }
      .zone-product-items .fn-product-layout {
        display: block;
      }
      .zone-product-items .fn-product-title {
        width: 100%;
      }
      .zone-product-items .fn-compareat_price {
        flex-direction: initial;
        align-items: baseline;
      }
      .zone-product-items .fn-product-price {
        text-align: left;
      }
      .zone-product-items .fn-product-price span {
        float: initial;
      }
      .zone-product-items .fn-product-title .t,.zone-product-items .fn-product-price span{
        font-size:14px
      }
      .zone-product-items .fn-compareat_price .fn-compare-at_price{
        font-size:12px
      }
      .zone-product-items .fn-color-attr {
        height: 22px;
        margin-top:4px
      }
      .zone-product-items .fn-color-attr ul li {
        width: 20px;
        height: 20px;
      }
      .zone-product-items .fn-color-attr ul li img {
        width: 20px;
        height: 20px;
      }
      .zone-product-items .button--full-width{
        min-height: calc(3.0rem + var(--buttons-border-width) * 2);
        height: calc(3.0rem + var(--buttons-border-width) * 2);
        margin-top:6px
      }
      .zone-product-items .fn-color-attr ul .color-quantity{
        line-height:20px
      }
    }
    @media screen and (max-width: 820px){
      .zone-product{
        background:#FFEDAC;
        padding: 15px 10px 20px;
        border-radius: 6px;
        margin-top:20px;
      }
      .zone-product-title{
        font-size:16px;
        line-height:22px;
        margin-bottom: 10px;
      }
      .zone-product .title_desc{
        font-size:12px;
        line-height:20px;
        padding-top: 0;
        align-items: baseline;
      }
      .zone-product-items .fn-product-price span{
        font-size:16px;
      }
      .zone-product-items .fn-product-title .t{
        font-size:14px;
        line-height: 16px;
        height: 34px;
      }
      .zone-product-items .fn-product-price{
        margin-top:0;
      }
    }
    @media screen and (max-width: 768px){
      .zone-product-title{
        margin-bottom:10px;
        line-height:19px
      }
      .zone-product-items {
        width: 49%;
        padding: 5px 5px 11px;
        margin-bottom:10px
      }
      .zone-product-items:nth-child(2n) {
        margin-right: 0;
      }
      .zone-product-items .button--full-width{
        font-size:14px;
        min-height: 40px;
      }
      .zone-product .title_desc{
       font-size:12px;
       margin-bottom:10px
     }
      .zone-product{
        padding: 15px 6px;
      }
      .zone-product .title_desc>span{
        font-size:14px;
        line-height:16px;
        margin-top: 5px;
      }
      .zone-product .title_desc .code{
        font-size:14px;
        line-height:16px;
      }
      .learn-more{
        font-size:14px;
      }
    }
</style>

{% if section.settings.title != blank %}
<div class="zone-product"  id="{{ section.settings.id }}">
  <div class="zone-product-title">
    {{ section.settings.title }}
    {% if section.settings.title_desc != blank %}
      <div class="title_desc">
        <span>{{ section.settings.title_desc }}</span>
        {% if section.settings.code != blank %}
        <span class="code">code:</span><span class="code">{{ section.settings.code }}</span>
        <img src="https://cdn.shopify.com/s/files/1/0356/5997/2741/files/8_23556d6b-f24f-4b67-8f64-73196bf27b0a.png?v=1691375251" onclick="copyticket('{{ section.settings.code }}')" class="code-img">
        {% endif %}
      </div>  
    {% endif %}
  </div>
  <div class="zone-product-content">
    {% for item in section.settings.product_collection.products %}
      {% if forloop.index <= section.settings.product_count %}
        <div class="zone-product-items">
          {% render 'product-Model-custom',
            card_product: item,
            progress: false,
            show_secondary_image: section.settings.show_secondary_off,
            colorSize: true,
            buttonSeat: 'fileSteam',
            buttonText: 'ADD TO CART',
            title: 'flex',
            pirce: 'intitle'
          %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <a href="{{ section.settings.learn_more_url }}" traget="_blank" class="learn-more">learn more >></a>
</div>
{% endif %}
<script>
  function copyticket(code){
    let url = code;
    let copyInput = document.createElement('input');
    	document.body.appendChild(copyInput);
    	copyInput.setAttribute('value', url);
    	copyInput.select();
    	document.execCommand("Copy");
    	copyInput.remove();
        alertMsg()
  }
   function alertMsg(){
      var alertFram = document.createElement("DIV");
      alertFram.id = "alertFram";
      alertFram.style.position = "fixed";
      alertFram.style.width = "100%";
      alertFram.style.textAlign = "center";
      alertFram.style.bottom = "40px";
      alertFram.style.zIndex = "10001";
      strHtml = " <span style=\"font-family: 微软雅黑;display:inline-block;background:#333;color:#fff;padding:0 20px;line-height:36px;border-radius:6px; \">Copied successfully</span>";
      alertFram.innerHTML = strHtml;
      document.body.appendChild(alertFram);
      setTimeout((function(){
        alertFram.style.display="none";
      }),2000);
    }
</script>
