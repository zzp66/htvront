<style>
  .fans-have-fun-notice{
    padding: 40px 0 45px;
  }
  .step-box{
    display:flex;
    justify-content: center;
    align-items: center;
  }
  .notice-title>div{
    display: flex;
    flex-direction: column;
  }
  .notice-title>div>span{
    margin-bottom:5px;
  }
  .notice-title>div>span:nth-last-child(1){
    margin-bottom:0;
  }
  .notice-title>p{
    font-weight: bold;
    font-size: 38px;
    color: #7E3C00;
    line-height: 45px;
    text-align: left;
    display:flex;
    flex-direction: column;
  }
  .step-list{
    width:60%;
    display: flex;
    flex-direction: column;
  }
  .step-list>div:before{
    content:'';
    width:3px;
    height: 98px;
    background: #FFE5BE;
    position: absolute;
  }
  .step-list>div:nth-child(1):before{
    height: 115px;
    top: -15px;
  }
  .step-list>div:after{
    content:'';
    width: 15px;
    height: 15px;
    background: #A54F00;
    border-radius:50%;
    position: absolute;
    z-index: 2;
    left: -6px;
    top: 4px;
  }
  .step-list>div{
    position:relative;
    width: 50%;
    height: 97px;
  }
  .step-list>div:nth-child(odd){
    align-self: flex-end;
  }
  .step-list>div:nth-child(even){
    align-self: flex-start;
  }
  .step-time{
    font-weight: bold;
    font-size: 20px;
    color: #A54F00;
    line-height: 23px;
    margin-bottom: 10px;
  }
  .step-content{
    font-weight: 600;
    font-size: 18px;
    color: #B9773A;
    line-height: 21px;
    display: flex;
    flex-direction: column;
  }
  .step-list .text-box{
    padding:10px 0 0 20px;
  }
  .step-list>div:nth-child(even) .text-box{
    padding:0 20px 0 0;
    text-align: right;
  }
  .step-list>div:nth-child(even) .step-time{
    color: #D54F10;
  }
  .step-list>div:nth-child(even) .step-content{
    color: #DE7340;
  }
  .step-list>div:nth-child(odd):after{}
  .step-list>div:nth-child(even):after{
    background: #D54F10;
    right: -9px;
    left: auto;
  }
  .step-list>div:nth-child(even):before{
    right:-3px;
  }
@media screen and (max-width:1440px){
  .notice-title>p{
    font-size: 30px;
    line-height: 34px;
  }
  .step-time{
    font-size: 18px;
    line-height: 23px;
    margin-bottom: 5px;
  }
  .step-list .text-box{
    padding: 0px 0 0 20px;
  }
  .step-content{
    font-size:16px;
  }
}
</style>
<div class="fans-have-fun-notice have-fun-style">
  <div class="step-box">
    <div class="step-list">
      {% for block in section.blocks %}
        <div>
          <div class="text-box">
            <div class="step-time">
              {{ block.settings.time }}
            </div>
            <div class="step-content">
              {{ block.settings.content_html }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="step-image-box">
      <div class="notice-title">
        <div>
          <span class="horizontal-line-first"></span>
          <span class="horizontal-line-second"></span>
          <span class="horizontal-line-third"></span>
        </div>
        <p>{{ section.settings.title }}</p>
      </div>
      <img src="{{ section.settings.image | img_url:'558x' }}">
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Fans-have-fun-notice",
    "settings": [
      {
        "type":"html",
        "id":"title",
        "label":"title"
      },{
        "type":"image_picker",
        "id":"image",
        "label":"image(插画图)"
      }
    ],
    "blocks":[{
      "type":"block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "time",
          "label": "time"
        },{
          "type":"html",
          "id":"content_html",
          "label":"content html"
        }
      ]
    }]
  }
{% endschema %}