      },{
      "type":"image_picker",
      "id":"image",
      "label":{
        "en":"Video Image",
        "zh-CN":"视频图片"
        }
      },{
      "type":"url",
       "id":"vedio_link",
       "label":{
          "en":"vedio link",
          "zh-CN":"视频链接"
        }
      },{
        "type":"image_picker",
        "id":"sales_img",
        "label":"sales_img"
      },{
        "type":"image_picker",
        "id":"sales_img_mobile",
        "label":"sales img mobile（非必填）"
      }
    ],
    "max_blocks":2,
    "blocks":[{
        "name":"bundle",
        "type":"bundle",
        "settings":[{
            "type": "product",
            "id": "product_item",
            "label": "product item"
          },
          {
             "type":"image_picker",
             "id":"Bags_img",
             "label":{
                "en":"bags image",
                "zh-CN":"图片"
             }
          },{
            "type":"text",
            "id":"bags_title",
            "label":{
              "en":"bags title",
              "zh-CN":"文案标题"
            }
          },{
            "type":"html",
            "id":"ul_text",
            "label":{
              "en":"ul text ",
