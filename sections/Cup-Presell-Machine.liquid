<style>
  .member-stories-player{
    position: absolute;
    left: 48%;
    cursor: pointer;
    top: 45%;
  }
  .craft-video-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    left: 0;
    top: 0;
    z-index: 999;
    display: none;
  }
  .craft-video-mask .carft-bags-main {
    cursor: pointer;
  }
  .craft-bags-Video {
    width:100%;
    height:653px;
  }
  .craft-bags-Video iframe{
    border-radius:10px
  }
  .craft-video-mask>div{
    margin: 0 auto;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    position: absolute;
    background-color: #fff;
    border-radius: 16px;
    padding: 3.9% 6.2%;
    width: 74.85%;
  }
  .craft-video-mask .mask-close {
    position: absolute;
    top: 21px;
    right: 25px;
  }
  .video-img{
    position: relative;
  }
  .image_link{
    padding-right:24px;
  }
  .presell-image-box{
    background-color:#fff;
    padding:10px 29px 7px 14px;
    text-align: center;
  }
  .bags-video{
    overflow:hidden;
    padding:20px 0 40px 0;
    display:flex;
  }
  .presell-image-box i{
    font-size: 24px;
    font-weight: 600;
    color: #723600;
    line-height: 33px;
    display:block;
    font-style: normal;
  }
  .craft-bags{
    width:100%;
    overflow:hidden;
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-size: 100% 100%;
    background-position: center;
    padding-bottom:40px;
  }
  .craft-width{
    width:1560px;
    margin: 0 auto;
  }
  .bag-product-title{
    padding:30px 0 20px 0;
  }
  .bag-title-text{
    font-size: 36px;
    font-weight: bold;
    color: #723600;
    text-align: center;
  }
  .bags-image{    
    min-width:409px;
  }
  .bags-text{
    padding-left:20px;
  }
  .bags-image>img{
    width:409px;
  }
  .bags-topimg{
    display:flex
  }
  .bags-imgbox h3{
    font-size: 22px;
    font-weight: bold;
    color: #723600;
    padding: 11px 0;
    line-height: 30px;
    height: 78px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  .bags-imgbox{
    width:770px;
    height:444px;
    border-radius: 4px;
    margin-left:20px;
    display:flex;
    background-color: #fff;
    padding: 18px 20px;
  }
  .bags-imgbox:nth-child(1){
    margin-left:0;
  }
  .ul-text{
    min-height: 15rem;
    padding-left:20px;
  }
  .ul-text .ul_text_li{
    font-size: 16px;
    color: #723600;
    line-height: 22px;
    list-style-type: disc;
    padding-bottom: 13px;
  }
  .bags_price .price__sale .fn-compareat_price,.price__regular .price-item--regular{
    font-size: 22px;
    font-weight: bold;
    color: #ECA62F;
    line-height: 30px;
    flex-direction: inherit;
  }
  .bags_price{
    font-size: 22px;
    font-weight: bold;
    color: #ECA62F;
    line-height: 30px;
    overflow: hidden;
    display: inline-block;
  }
  .bags-addcart{
    display: inline-block;
    width:100%;
  }
  .bags_price .price{
    float: left;
    margin-left: 10px;
  }
  .bags_price .fn-compareat_price .fn-compare-at_price{
    padding: 2px 0 0 10px;
    color: #723600;
    font-weight: 400;
    font-size: 14px;
  }
  .bags_price b{
    float:left;
  }
  .bags_old_price{
    font-size: 14px;
    color: #723600;
    line-height: 19px;
    font-style:normal;
    font-weight:400;
  }
  .bags-addcart .button--full-width{
    width:100%;
    height: 49px;
    background: linear-gradient(156deg, #FFCD66 0%, #ECA62F 100%);
    border-radius: 4px;
    --border-opacity: none;
  }
