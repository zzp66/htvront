<style>
  .valentinesday-product{
    background-image:url('{{ section.settings.background_image | img_url:'1920x' }}');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    {% if section.settings.background_color != blank %}
      background:{{section.settings.background_color}};
    {% endif %}
    padding:25px 0;
  }
  .title-desc-style{
    text-align:center;
    margin-top: 10px;
    position: relative;
  }
  .title-desc-style>img{
    margin:0 auto;
  }
  .product-box{
    width:1600px;
    margin:0 auto;
    background: #FBB7C2;
    border-radius: 10px;
    position: relative;
    overflow:hidden;
  }
  .product-box>img{
    position:absolute;
    top:0;
  }
  .title-desc-style>div{
    display:inline-block;
    position: relative;
  }
  .title-desc-style .title{
    position: absolute;
    margin: 0;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 36px;
    font-weight: bold;
    color: #71132E;
    line-height: 42px;
    width:100%;
  }
  .title-desc-style>p{
    font-size: 24px;
    font-weight: 400;
    color: #71132E;
    line-height: 28px;
    margin-top: -30px;
  }
  .position-box{
    position: relative;
  }
  .position-box .product-item{
    display:flex;
    padding:20px 15px;
  }
  .position-box .product-model-items{
    flex:1;
    margin-right: 15px;
    background: #FFF4F4;
    padding: 16px 14px;
    border-radius: 6px;
    width:0;
  }
  .position-box .product-model-items:nth-last-child(1){
    margin-right:0;
  }
  .valentinesday-product .product-model-items .fn-product-price{
    width:35%;
  }
  .product-model-items .fn-compareat_price{
    text-align:right;
  }
  .product-model-items .fn-product-title{
    line-height: 22px;
  }
  .product-model-items .fn-product-title .t{
    color: #71132E;
    font-size: 14px;
  }
  .product-model-items .fn-product-price span{
    color: #FF708A;
    font-size: 22px;
  }
  .product-model-items .fn-compareat_price .fn-compare-at_price{
    color: #71132E;
    font-size: 18px;
    font-weight: 400;
  }
  .product-model-items .fn-color-attr{
    margin: 10px 0 12px 0;
  }
  .product-model-items .button--full-width{
    border-radius: 4px;
    height: 46px;
    background: linear-gradient(270deg, #FF7D9A 0%, #FF8EA7 100%);
    --border-offset: none;
    --border-opacity: none;
    font-size: 18px;
  }
  .valentinesday-product-swiper{
    margin-top:30px;
  }
   @media screen and (max-width: 1024px){
    .valentinesday-product{
       background:{{section.settings.background_color_mobile}}
    }
     .position-box .product-model-items{
        padding: 5px 5px 8px;
        margin:0 8px 8px 0;
        flex: 1 1 49%;
     }
     .position-box .product-model-items:nth-child(2n){
       margin-right:0;
     }
    .valentinesday-product .position-box .product-item{
      flex-wrap:wrap;
      padding: 20px 5px 12px;
    }
    .product-box .fn-product-layout{
      flex-direction: column;
      justify-content: center;
     }
    .product-box .fn-product-title{
        width: 100%;
     }
     .product-box .fn-product-price{
        width: 100%;
     }
     .product-box .fn-compareat_price{
        text-align: left;
        flex-direction: row;
        align-items: baseline;
        margin-top: 5px;
     }
     .product-box .fn-product-title .t{
       font-size:14px;
     }
     .product-box .fn-product-price span {
       font-size: 16px;
     }
     .product-box .fn-compareat_price .fn-compare-at_price{
       font-size:14px;
     }
     .product-model-items .button--full-width{
       height: 40px;
      font-size: 14px;
      min-height: 40px;
     }
   }
   @media screen and (max-width: 820px){
    .valentinesday-product{
       {% if section.settings.background_color_mobile != blank %}
          background:{{section.settings.background_color_mobile}}
        {% else %}
          background:none;
        {% endif %}
    }
    .position-box .title-desc-style>div>img{
      display:none;
    }
    .position-box .title-desc-style .title{
       font-size:26px;
        position: relative;
        top: 0;
     }
     .position-box .title-desc-style>p{
       font-size:20px;
      margin-top: 0;
     }
   }
   @media screen and (max-width: 480px){
    .position-box .title-desc-style .title{
      font-size: 16px;
      line-height: 19px;
    }
    .position-box .title-desc-style>p {
      font-size: 14px;
      line-height: 16px;
    }
     .valentinesday-product .position-box .product-item{
       padding-top:10px;
     }
     .position-box .product-model-items{
        flex: 1 1 48%;
     }
     .valentinesday-product{
       padding-top:0;
     }
   }
</style>
<div class="valentinesday-product " id="{{ section.settings.id }}">
  <div class="product-box valentinesday-width">
    <img src="{{ section.settings.image | img_url:'1600x'}}">
    <div class="position-box">
      <div class="title-desc-style">
         <div>
          <img src="{{ section.settings.title_image | img_url:'537x' }}">
          <p class="title">{{ section.settings.title }}</p>
         </div>
         <p class="desc">{{ section.settings.desc }}</p>
      </div>
      <div class="product-item">
        {% for block in section.blocks %}
          <div class="product-model-items">
            {% render 'product-Model',
                card_product: block.settings.product_item,
                colorSize: true,
                buttonSeat: 'fileSteam',
                buttonText: 'Add To Cart',
                title: 'flex',
                pirce: 'intitle',
              %}
            </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Valentinesday-Product",
    "settings": [
      {
        "type": "text",
        "id": "id",
        "label": "id(页面唯一性，全英文)"
      },{
        "type":"color",
        "id":"background_color",
        "label":"background color(PC)"
      },{
        "type":"color",
        "id":"background_color_mobile",
        "label":"background color(mobile)"
      },{
        "type":"image_picker",
        "id":"background_image",
        "label":"background image"
      },{
        "type":"image_picker",
        "id":"image",
        "label":"image"
      },{
        "type":"image_picker",
        "id":"title_image",
        "label":"title image"
      },{
        "type":"text",
        "id":"title",
        "label":"title"
      },{
        "type":"text",
        "id":"desc",
        "label":"desc"
      }
    ],
    "blocks":[{
      "name":"product",
      "type":"product",
       "settings":[
         {
          "type": "product",
          "id": "product_item",
          "label": "product item"
          }
        ]
    }],
    "presets":[
        {
          "name":"Valentinesday-Product"
        }
    ]
  }
{% endschema %}