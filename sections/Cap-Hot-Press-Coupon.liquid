{
    "name":"Cap Hot Press Coupon",
    "settings":[
        {
            "type":"color",
            "id":"bg_color",
            "label":"background color"
        },
        {
            "type":"text",
            "id":"title",
            "label":"Title"
        },
        {
            "type":"text",
            "id":"card_id",
            "label":"id"
        },
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"image_picker",
            "id":"phone_image",
