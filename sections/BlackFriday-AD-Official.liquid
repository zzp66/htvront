<style>
  .black-friday-advertisement{
    width:100%;
    background:linear-gradient(91deg, #CD0101 0%, #8E0101 100%);
  }
</style>
<div class="black-friday-advertisement">
   <picture>
    <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobile | img_url:'750x' }}">
    <source media="(min-width: 751px)" srcset="{{ section.settings.image | img_url:'1920x' }}">
    <img src="{{ section.settings.image | img_url:'1920x' }}">
  </picture>
</div>
{% schema %}
  {
    "name": "Black Friday AD",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label":"image"
	  },
      {
	    "type": "image_picker",
		"id": "image_mobile",
		"label":"image mobile"
      },{
        "type":"url",
        "id":"link",
        "label":"link"
      }
    ]
  }
{% endschema %}

