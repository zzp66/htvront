<div class="fn-header-video">
  <div class="fn-video-content">
    <div class="fn-video-main fn-computer-videoimgge">
    {% if section.settings.image_video != blank %}
        {% assign image = section.settings.image_video | img_url: '790x' %}
        <img src="{{ image }}" alt="">
    {% endif %}
    </div>
    <div class="fn-video-main fn-mobile-videoimage">
    {% if section.settings.mobile_videoimg != blank %}
        {% assign image = section.settings.mobile_videoimg | img_url: '375x' %}
        <img src="{{ image }}" alt="">
    {% endif %}
    </div>
    <div class="fn-video-main">
      <h3 class="t video_title">    
          {{section.settings.video_title}}
      </h3>
      <p class="video_text">
          {{section.settings.video_text}}
      </p>
      <div class="video_mobilebutton ">
      <div class="fn-video-button">Watch Video</div>
        </div>
    </div>
  </div>
</div>
<div class="fn-video-mask">
  <div class="fn-mask">
    <div>
    <div class="mask-close">
      {% render 'press-close' %}
    </div>
    <video id="pressVideo" width="100%" height="100%" style="border-radius: 15px;" controls muted >
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/mp4">
        <source src="https://cdn.shopify.com/videos/c/o/v/fc55ef9f99df458b9e79ea8a7684145a.mp4" type="video/ogg">
    </video>
  </div>
  </div>

</div>
{% schema %}
{
	"name": "hot press video",
	"settings": [{
			"type": "image_picker",
			"id": "image_video",
			"label": {
				"en": "Image",
				"zh-CN": "图片"
			}
		},
        {
			"type": "image_picker",
			"id": "mobile_videoimg",
			"label": {
				"en": "mobile img",
				"zh-CN": "图片"
			}
		},
		{
			"type": "text",
			"id": "video_title",
			"label": {
				"en": "title",
				"zh-CN": "标题"
			}
		},
		{
			"type": "text",
			"id": "video_text",
			"label": {
				"en": "text",
				"zh-CN": "文本"
			}
		}
	]
}
{% endschema %}

