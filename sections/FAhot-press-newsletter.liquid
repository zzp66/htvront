  <div class="fn-subscription  fn-voucher-email">
    <div class="fn-subscription-Email">{{section.settings.service_desc}}</div>
    <div class="fn-subscription-form">
        {% form 'customer'%}
            <input id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]" class="form-input" value="{{ form.email }}" aria-required="true"
            autocorrect="off" autocapitalize="off" autocomplete="email" 
            {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
            aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            placeholder="Enter Email"
            required/>
              <button type="submit" class="form-button" name="commit" id="subscription_email">Subscribe</button>
            {%- if form.posted_successfully? -%}
                <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}"
                tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
            {%- endif -%}
                <h3 class="fn-Subscribed newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{% render 'icon-success' %}Email subscribed please enter again</h3>
        {% endform %}
  </div>
</div>
<div class="fn-subscription fn-voucher-desc">
  <div class="fn-subscription-Email" >{{section.settings.voucher_desc}}</div>
</div>

