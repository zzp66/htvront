 $('#fn-BlackFriday-drawbutton').click(function(){
    $('.fn-BlackFriday-errormessage,.fn-BlackFriday-already').hide();
    var drawinput_val = $('.fn-BlackFriday-drawinput').val();
    var encodedUrl = encodeURIComponent(drawinput_val);
       $.ajax({
         type:'GET',
         dataType:'jsonp',
         data: { site: site_uk,order_id: encodedUrl,user_email: draw_userEmail },
         url: 'https://qn.htvront.com:9000/prod-biz-api/htvront/lotteryBaseInfo/lotteryActivity',
         jsonp :'callback', //指定一个查询参数名称来覆盖默认的 jsonp 回调参数名 callback
         jsonpCallback: 'handle', //设置回调函数名
         success(result){
           console.log('result',result.status);
           if (result.status === 200 ){
             let a = '2';
             $('.fn-BlackFriday-mask').show();
             $('.fn-BlackFridaymask-main').eq(a).show().siblings().hide();
             $('.fn-BlackFriday-prizeimg').attr("src",""+ result.data.pic_path);
           }
           if (result.status === 500 ){
            $('.fn-BlackFriday-already').hide();
            $('.fn-BlackFriday-errormessage').show();
           }
           if (result.status === 501 ){
            $('.fn-BlackFriday-already').show();
            $('.fn-BlackFriday-errormessage').hide();
           }
        },
        error(result){
           console.log('Progress_arr');
        }
  });
})
