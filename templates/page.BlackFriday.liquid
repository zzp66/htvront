<script>
   var encoded_state = 'US';
   var div_content =document.getElementById("fn-scroll-content")
   get_particulars();
   function get_particulars(){
         $.ajax({
           type:'GET',
           dataType:'jsonp',
           data: {site: encoded_state},
           url: 'https://qn.htvront.com:9000/prod-biz-api/htvront/lotteryBaseInfo/getWinningInfo',
           jsonp :'callback',
           jsonpCallback: 'handle',
           success(result){
                var draw_arr = result.data;
                var a_ul ="<ul>"
                var monthArr = new Array("Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Spt","Oct","November","Dec");
                draw_arr.forEach((item, index) => {
                  var date = new Date(item.updatedTime);
                  var month = monthArr[date.getMonth()]; //月
                  var ddate = date.getDate(); //日
                  var item_name = item.user_email;
                  if(item_name) {
                      a_ul+="<li>" + item_name.substring(0,2) + "****" + " won the " + item.winning_product + " on " + month + " " + ddate + "</li>"
                  } else {
                      a_ul+="<li>" + "****" + " won the " + item.winning_product + " on " + month + " " + ddate + "</li>"
                  }
                  
                  
               })
              a_ul+="</ul>"
             div_content.innerHTML=a_ul; 
          },
          error(result){
             console.log('Progress_arr');
          }
    });
  }
  
