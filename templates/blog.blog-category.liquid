<script>
  var category_Slide = 0;
    $(function (){
      $('.fn-category-nav .swiper-slide a').each(function(){
        $this = $(this);
        var urlWindow = window.location.protocol+"//"+window.location.host+""+window.location.pathname;
        if($this[0].href === urlWindow){
          category_Slide =  $this.parent().index();
          $this.parent().addClass('active');
        }
      });
    });
  $(function (){
      var tagSwiper = new Swiper('.swiper-container', {
        autoplay: false,
//          loop : true,
        slidesPerView: 4,
        spaceBetween: 22,
//         slidesOffsetBefore : 150,
        initialSlide: category_Slide,
         breakpoints: {
          480: {
            loop : true,
            slidesPerView: 1,
            spaceBetween: 5,
            slidesOffsetBefore : 50,
          },
          768: {
