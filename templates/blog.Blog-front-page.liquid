  .fn-craft-head {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50px;
  }
  .fn-machines-content ul,
  .fn-craft-content ul {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .fn-craft-content ul li{
