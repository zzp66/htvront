<style>
  .fn-blog-home {
    max-width: 1600px;
    margin: 0 auto;
  }
  .fn-blog-home .fn-breadcrumb ul {
    font-size: 14px;
  }
  .fn-spot-news {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 100px;
  }
  .fn-news-content {
    width: 655px;
    padding: 32px;
    box-shadow: 0px 4px 14px 0px rgb(0 0 0 / 6%);
    border-radius: 16px;
  }
  .fn-content-title {
    font-size: 24px;
    font-weight: bold;
    color: #333333;
    line-height: 1;
  }
  .fn-content-list {
    padding: 20px 0;
  }
  .fn-news-content ul li:nth-child(2) {
    border-top: 1px solid #e6e6e6;
    border-bottom: 1px solid #e6e6e6;
  }
  .fn-article-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 6px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2; /* 这里是超出几行省略 */
    overflow: hidden;
    line-height: 1;
  }
  .fn-article-headtitle {
    font-size: 16px;
    font-weight: bold;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
  }
  .fn-article-footetitle {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;				
    text-overflow: ellipsis;	
    display: -webkit-box;	
    -webkit-line-clamp: 2;
    line-clamp: 2;					
    -webkit-box-orient: vertical;
  }
  .fn-article-excerpt {
    font-size: 14px;
    color: #333;
    line-height: 20px;
    margin-bottom: 6px;
  }
  .fn-article-excerpt-text {
    font-size: 14px;
    color: #333;
    line-height: 20px;
    margin-bottom: 30px;
/*     text-overflow: -o-ellipsis-lastline;
