<style>
  body{
    letter-spacing:0;
    background:linear-gradient(90deg, #F75358 0%, #FF9E4E 100%) !important;
  }
  .new-people-zone{
    background-image:url('https://cdn.shopify.com/s/files/1/0356/5997/2741/files/Slice_1.png?v=1697417851');
    background-size: 100% 100%;
    background-position: center;
    padding:140px 0 60px 0;
  }
  .new-people-zone>p:nth-child(1){
    text-align:center;
    height: 49px;
    font-size: 36px;
    font-weight: bold;
    color: #FFF2B0;
    line-height: 42px;
  }
  .new-people-zone>p:nth-child(2){
    height: 33px;
    font-size: 24px;
    font-weight: 400;
    color: #FFF2B0;
    line-height: 28px;
    text-align:center;
    margin-top:10px;
  }
